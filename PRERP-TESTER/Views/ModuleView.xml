<UserControl x:Class="PRERP_TESTER.Views.ModuleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:PRERP_TESTER.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

	<UserControl.Resources>
		<Style x:Key="HorizontalAccountListStyle" TargetType="ListBox">
			<Setter Property="ItemsPanel">
				<Setter.Value>
					<ItemsPanelTemplate>
						<StackPanel Orientation="Horizontal"/>
					</ItemsPanelTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</UserControl.Resources>

	<Grid Background="#F4F7F9">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Border Grid.Row="0" Background="White" Padding="15,10" BorderBrush="#EEE" BorderThickness="0,0,0,1">
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="{Binding ModuleEntity.Name}" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,20,0"/>
				<Button Content="Open All" Command="{Binding OpenAllCommand}" Padding="15,5" Background="#3794FF" Foreground="White" BorderThickness="0"/>
			</StackPanel>
		</Border>

		<Border Grid.Row="1" Background="White" Padding="10,5">
			<ListBox ItemsSource="{Binding Accounts}"
                     SelectedItem="{Binding SelectedAccount}"
                     Style="{StaticResource HorizontalAccountListStyle}"
                     BorderThickness="0" Background="Transparent">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<Border Background="#E0E0E0" CornerRadius="4" Padding="10,5" Margin="0,0,5,0">
							<StackPanel>
								<TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold"/>
								<TextBlock Text="{Binding Username}" FontSize="10" Foreground="#666"/>
							</StackPanel>
						</Border>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</Border>

		<TabControl Grid.Row="2"
                    ItemsSource="{Binding SelectedAccount.Tabs}"
                    BorderThickness="0" Background="Transparent" Margin="10">

			<TabControl.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Header}" Padding="5"/>
				</DataTemplate>
			</TabControl.ItemTemplate>

			<TabControl.ContentTemplate>
				<DataTemplate>
					<Grid Background="White">
						<ContentControl Content="{Binding WebViewInstance}"/>

						<TextBlock Text="{Binding Url}" VerticalAlignment="Top" HorizontalAlignment="Right"
                                   Background="#CCFFFFFF" Padding="5" FontSize="10" Foreground="Gray"/>
					</Grid>
				</DataTemplate>
			</TabControl.ContentTemplate>
		</TabControl>
	</Grid>
</UserControl>