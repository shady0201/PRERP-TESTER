<UserControl x:Class="PRERP_TESTER.Views.UserControls.BrowserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:conv="clr-namespace:PRERP_TESTER.Converters"
             xmlns:ext="clr-namespace:PRERP_TESTER.Extensions"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:helper="clr-namespace:PRERP_TESTER.Helper"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:ei="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Control.Resources>
        <conv:SubtractValueConverter x:Key="SubtractValueConverter" />
        <helper:Base64ToImageSourceConverter x:Key="Base64ToImageConverter"/>
        <helper:StringNotNullConverter x:Key="StringNotNullConverter"/>
    </Control.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Padding="0"
                CornerRadius="7,7,0,0"
                Background="{DynamicResource BrowserTabBackground}"
                VerticalAlignment="Bottom">

            <Grid Grid.Row="0" x:Name="ParentGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <ListBox Grid.Column="0"
                         Grid.Row="0"
                        AlternationCount="1000"
                        x:Name="TabHeaderListBox"
                        AllowDrop="True"
                        PreviewMouseMove="ListBox_PreviewMouseMove"
                        DragOver="ListBox_DragOver"
                        Drop="ListBox_Drop"
                        ItemsSource="{Binding TabViewModels}"
                        SelectedItem="{Binding SelectedTab}"
                        ItemContainerStyle="{StaticResource TabWebHeaderStyle}"
                        BorderThickness="0"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        Background="Transparent"
                        MaxWidth="{Binding ActualWidth, ElementName=ParentGrid, Converter={StaticResource SubtractValueConverter}, ConverterParameter=40}">

                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="1" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                                <i:Interaction.Behaviors>
                                    <ei:FluidMoveBehavior AppliesTo="Children" Duration="0:0:0.3">
                                        <ei:FluidMoveBehavior.EaseY>
                                            <CubicEase EasingMode="EaseOut"/>
                                        </ei:FluidMoveBehavior.EaseY>
                                        <ei:FluidMoveBehavior.EaseX>
                                            <CubicEase EasingMode="EaseOut"/>
                                        </ei:FluidMoveBehavior.EaseX>
                                    </ei:FluidMoveBehavior>
                                </i:Interaction.Behaviors>
                            </UniformGrid>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
                <Button Grid.Column="1"
                            Command="{Binding AddTabCommand}"
                            Width="25" Height="25" Margin="8,0,0,0"
                            Style="{StaticResource AddTabButtonStyle}">
                    <iconPacks:PackIconMaterial Kind="Plus" Width="14" Height="14" VerticalAlignment="Center"/>
                </Button>
            </Grid>
        </Border>

        <ItemsControl ItemsSource="{Binding TabViewModels}" Grid.Row="1">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Visibility="{Binding IsSelected, Converter={StaticResource BoolToVis}}">
                        <ContentControl Content="{Binding}">
                            <ContentControl.Style>
                                <Style TargetType="ContentControl">
                                    <Setter Property="ContentTemplate" Value="{x:Null}" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsLoaded}" Value="True">
                                            <Setter Property="ContentTemplate">
                                                <Setter.Value>
                                                    <DataTemplate>
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="*"/>
                                                            </Grid.RowDefinitions>
                                                            <!--  webview controls  -->
                                                            <Border Grid.Row="0" Background="{DynamicResource BrowserTabSelect}" Padding="5">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,5,0">
                                                                        <Button Command="{Binding BackCommand}"
                                                                                    Style="{StaticResource NavWebButtonStyle}">
                                                                            <iconPacks:PackIconMaterial Kind="ArrowLeft" Width="14" Height="14" VerticalAlignment="Center"/>
                                                                        </Button>
                                                                        <Button Command="{Binding ForwardCommand}"
                                                                                    Style="{StaticResource NavWebButtonStyle}"
                                                                                    Margin="5,0">
                                                                            <iconPacks:PackIconMaterial Kind="ArrowRight" Width="14" Height="14" VerticalAlignment="Center"/>
                                                                        </Button>
                                                                        <Button Command="{Binding ReloadCommand}"
                                                                                    Style="{StaticResource NavWebButtonStyle}">
                                                                            <iconPacks:PackIconMaterial Kind="Refresh" Width="14" Height="14" VerticalAlignment="Center"/>
                                                                        </Button>
                                                                    </StackPanel>
                                                                    <!-- Input Address-->
                                                                    <Border Grid.Column="1" Background="{DynamicResource InputBackground}" BorderBrush="{DynamicResource InputBorder}" BorderThickness="1" CornerRadius="15" Padding="10,2">
                                                                        <Grid>
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="Auto"/>
                                                                                <ColumnDefinition Width="*"/>
                                                                                <ColumnDefinition Width="Auto"/>
                                                                            </Grid.ColumnDefinitions>

                                                                            <iconPacks:PackIconMaterial x:Name="SecurityIcon" 
                                                                                                            Grid.Column="0"
                                                                                                            VerticalAlignment="Center" 
                                                                                                            Width="12" Height="12" 
                                                                                                            Margin="0,0,8,0">
                                                                                <iconPacks:PackIconMaterial.Style>
                                                                                    <Style TargetType="iconPacks:PackIconMaterial">
                                                                                        <Setter Property="Kind" Value="LockOpenVariantOutline"/>
                                                                                        <Setter Property="Foreground" Value="Gray"/>
                                                                                        <Style.Triggers>
                                                                                            <DataTrigger Binding="{Binding IsSecure}" Value="True">
                                                                                                <Setter Property="Kind" Value="Lock"/>
                                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                                                <Setter Property="Foreground" Value="#28a745"/>
                                                                                            </DataTrigger>
                                                                                            <DataTrigger Binding="{Binding IsSecure}" Value="False">
                                                                                                <Setter Property="Kind" Value="AlertCircleOutline"/>
                                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                                                <Setter Property="Foreground" Value="#dc3545"/>
                                                                                            </DataTrigger>
                                                                                            <DataTrigger Binding="{Binding IsSecure}" Value="{x:Null}">
                                                                                                <Setter Property="Kind" Value="Google"/>
                                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                                                <Setter Property="Foreground" Value="{DynamicResource IconColor}"/>
                                                                                            </DataTrigger>
                                                                                        </Style.Triggers>
                                                                                    </Style>
                                                                                </iconPacks:PackIconMaterial.Style>
                                                                            </iconPacks:PackIconMaterial>
                                                                            <Grid Grid.Column="1">
                                                                                <TextBox x:Name="UrlTextBox"
                                                                                             Text="{Binding Url, UpdateSourceTrigger=PropertyChanged}" 
                                                                                             Style="{StaticResource AddressBarTextBoxStyle}"
                                                                                             BorderThickness="0"
                                                                                             VerticalAlignment="Center"
                                                                                             Background="Transparent">
                                                                                    <TextBox.InputBindings>
                                                                                        <KeyBinding Key="Enter" Command="{Binding GoToUrlCommand}"/>
                                                                                    </TextBox.InputBindings>
                                                                                </TextBox>
                                                                                <Popup x:Name="AddressPopup"
                                                                                           IsOpen="{Binding IsSuggestionOpen}"
                                                                                           PlacementTarget="{Binding ElementName=UrlTextBox}"
                                                                                           AllowsTransparency="True"
                                                                                           VerticalOffset="4"
                                                                                           PopupAnimation="Fade"
                                                                                           StaysOpen="False">
                                                                                    <Border Background="White" CornerRadius="0,0,8,8" BorderThickness="1,0,1,1" BorderBrush="#DCDCDC" Width="{Binding ActualWidth, ElementName=UrlTextBox}">
                                                                                        <Border.Effect>
                                                                                            <DropShadowEffect BlurRadius="10" Opacity="0.1" ShadowDepth="3"/>
                                                                                        </Border.Effect>
                                                                                        <ListBox x:Name="SuggestionListBox"
                                                                                                     ItemsSource="{Binding Suggestions}"
                                                                                                     SelectedItem="{Binding SelectedSuggestion, UpdateSourceTrigger=PropertyChanged}"
                                                                                                     ItemContainerStyle="{StaticResource AddressSuggestionItemStyle}"
                                                                                                     BorderThickness="0" Background="Transparent">
                                                                                            <ListBox.ItemTemplate>
                                                                                                <DataTemplate>
                                                                                                    <Grid Background="Transparent" Margin="5,0">
                                                                                                        <Grid.ColumnDefinitions>
                                                                                                            <ColumnDefinition Width="Auto"/>
                                                                                                            <ColumnDefinition Width="*"/>
                                                                                                            <ColumnDefinition Width="Auto"/>
                                                                                                        </Grid.ColumnDefinitions>
                                                                                                        <Grid Grid.Column="0">
                                                                                                            <iconPacks:PackIconMaterial x:Name="DefaultIcon" Kind="History" Width="16" Height="16" Foreground="Gray" VerticalAlignment="Center"/>
                                                                                                            <Image x:Name="FaviconImage" Width="16" Height="16" VerticalAlignment="Center" HorizontalAlignment="Center"
                                                                                                                            Source="{Binding FaviconBase, Converter={StaticResource Base64ToImageConverter}}"
                                                                                                                            Visibility="Collapsed"/>
                                                                                                        </Grid>
                                                                                                        <StackPanel Grid.Column="1" Margin="10,10" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                                                                                            <TextBlock Text="{Binding Title}" FontSize="14" TextTrimming="CharacterEllipsis"/>
                                                                                                            <TextBlock Text="-" Margin="5,0" Foreground="Gray"/>
                                                                                                            <TextBlock Text="{Binding Url}" Foreground="#FF6B3E1E" FontSize="14" TextTrimming="CharacterEllipsis" Opacity="0.7"/>
                                                                                                        </StackPanel>
                                                                                                        <Button x:Name="BtnDelete"
                                                                                                                        Grid.Column="2"
                                                                                                                        Width="22" Height="22"
                                                                                                                        Style="{StaticResource ButtonRemoveSuggestionStyle}"
                                                                                                                        Visibility="Hidden"
                                                                                                                        Command="{Binding DataContext.RemoveSuggestionCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                                                                                        CommandParameter="{Binding}">
                                                                                                            <iconPacks:PackIconMaterial Kind="Close" Width="14" Height="14" Foreground="Gray"/>
                                                                                                        </Button>
                                                                                                    </Grid>
                                                                                                    <DataTemplate.Triggers>
                                                                                                        <DataTrigger Binding="{Binding FaviconBase, Converter={StaticResource StringNotNullConverter}}" Value="True">
                                                                                                            <Setter TargetName="DefaultIcon" Property="Visibility" Value="Collapsed"/>
                                                                                                            <Setter TargetName="FaviconImage" Property="Visibility" Value="Visible"/>
                                                                                                        </DataTrigger>

                                                                                                        <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                                                                                            <Setter TargetName="BtnDelete" Property="Visibility" Value="Visible"/>
                                                                                                        </DataTrigger>

                                                                                                    </DataTemplate.Triggers>
                                                                                                </DataTemplate>
                                                                                            </ListBox.ItemTemplate>
                                                                                        </ListBox>
                                                                                    </Border>
                                                                                </Popup>
                                                                            </Grid>
                                                                        </Grid>
                                                                    </Border>
                                                                </Grid>
                                                            </Border>
                                                            <!-- webview content  -->
                                                            <Grid Grid.Row="1">
                                                                <wv2:WebView2 ext:WebView2Extensions.AccountID="{Binding UserAccount.SessionFolder}">
                                                                    <wv2:WebView2.Style>
                                                                        <Style TargetType="{x:Type wv2:WebView2}">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding IsDefaultPageVisible}" Value="True">
                                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </wv2:WebView2.Style>
                                                                </wv2:WebView2>

                                                                <!---Blank tab-->
                                                                <Border Visibility="{Binding IsDefaultPageVisible, Converter={StaticResource BoolToVis}}">
                                                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                                                                    </StackPanel>
                                                                </Border>
                                                            </Grid>
                                                        </Grid>
                                                    </DataTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ContentControl.Style>
                        </ContentControl>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
