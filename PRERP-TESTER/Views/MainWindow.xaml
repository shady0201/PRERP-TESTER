<Window x:Name="AppMain" x:Class="PRERP_TESTER.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:helper="clr-namespace:PRERP_TESTER.Helper"
        Title="PRERP TESTER" 
        Height="768" Width="1366"
        Closing="Window_Closing"
        WindowStartupLocation="CenterScreen">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="MenuColumn">
                <ColumnDefinition.Style>
                    <Style TargetType="ColumnDefinition">
                        <Setter Property="Width" Value="250"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <helper:GridLengthAnimation 
                                                        Storyboard.TargetProperty="Width"
                                                        From="250"
                                                        To="50" 
                                                        Duration="0:0:0.3">
                                                <helper:GridLengthAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </helper:GridLengthAnimation.EasingFunction>
                                            </helper:GridLengthAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                                <DataTrigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <helper:GridLengthAnimation 
                                                    Storyboard.TargetProperty="Width"
                                                    From="50"
                                                    To="250" 
                                                    Duration="0:0:0.3">
                                                <helper:GridLengthAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </helper:GridLengthAnimation.EasingFunction>
                                            </helper:GridLengthAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.ExitActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ColumnDefinition.Style>
            </ColumnDefinition>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menu Left -->
        <Border Grid.Column="0" BorderBrush="#FFCCCCCC" BorderThickness="0,0,1,0" Padding="5,0,5,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" MaxHeight="500px"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <!--- Title -->
                <Border Grid.Row="0" Height="37" Padding="0,0,0,0" Margin="0,10,0,10">
                    <Grid VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0"  Source="/Assets/logo.png" 
                                   Width="28" Height="28" 
                                   Stretch="Fill"
                                   Margin="5,0,5,0"
                                   Cursor="Hand">
                            <Image.InputBindings>
                                <MouseBinding MouseAction="LeftClick" Command="{Binding ToggleMenuCommand}"/>
                            </Image.InputBindings>
                        </Image>
                        <TextBlock Grid.Column="1" Width="auto" Height="auto" Text="{Binding ServerType}" Foreground="#FF404040" FontSize="14" FontWeight="SemiBold" FontFamily="Sans Serif Collection">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <Button Grid.Column="2"
                                Command="{Binding ToggleMenuCommand}"
                                Style="{StaticResource StyleButtonCollapse}"
                                Margin="0,0,5,0">
                            <iconPacks:PackIconMaterial Kind="ArrowCollapseLeft" VerticalAlignment="Center"/>
                        </Button>
                    </Grid>
                </Border>
                <!--Label module-->
                <StackPanel Grid.Row="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition>
                                <ColumnDefinition.Style>
                                    <Style TargetType="ColumnDefinition">
                                        <Setter Property="Width" Value="Auto"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                                <Setter Property="Width" Value="*"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ColumnDefinition.Style>
                            </ColumnDefinition>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Foreground="#FF404040" FontSize="12" FontFamily="Sans Serif Collection">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="{Binding FilteredModuleCount, StringFormat='MODULE ({0})'}"/>
                                    <Setter Property="FontSize" Value="11"/>
                                    <Setter Property="FontWeight" Value="Normal"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                            <Setter Property="Text" Value="M"/>
                                            <Setter Property="FontSize" Value="22"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Margin" Value="0,0,0,0"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <Button Grid.Column="1"
                                    Command="{Binding CreateModuleCommand}"
                                    Width="25" Height="25"
                                    Margin="10,0,0,0"
                                    Style="{StaticResource CreateDataMenuStyle}">
                            <iconPacks:PackIconMaterial Kind="PlusBox" Width="14" Height="14" VerticalAlignment="Center" Foreground="Green"/>
                        </Button>
                    </Grid>
                </StackPanel>
                <!-- Thanh tìm kiếm module-->
                <StackPanel Grid.Row="2" Margin="10,5" >
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <Border Background="#FFF1F1F1" CornerRadius="8" Padding="5,2" Height="30">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <iconPacks:PackIconMaterial Kind="Magnify" Foreground="Gray" VerticalAlignment="Center" Width="12" />
                            <TextBox Grid.Column="1" 
                                     Text="{Binding SearchModuleText, UpdateSourceTrigger=PropertyChanged}"
                                     Background="Transparent" BorderThickness="0" 
                                     FontSize="12" Margin="5,0"
                                     VerticalContentAlignment="Center"/>

                            <TextBlock IsHitTestVisible="False" Text="Tìm module..." 
                                       VerticalAlignment="Center" Grid.Column="1" Margin="5,0"
                                       Foreground="DarkGray" FontSize="12">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SearchModuleText}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding SearchModuleText}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>
                </StackPanel>
                <!-- Danh sách Module -->
                <ListBox Grid.Row="3"
                        ItemsSource="{Binding ModuleMenuView}"
                        SelectedItem="{Binding SelectedModule}"
                        ItemContainerStyle="{StaticResource MenuItemModuleStyle}"
                        Background="Transparent"
                        BorderThickness="0"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        Padding="0,0,0,0"
                        VerticalAlignment="Stretch">

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <ContentControl Content="{Binding}"
                                            ContentTemplate="{StaticResource MenuItemModule}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <!-- Account Menu -->
                <Grid Grid.Row="4">
                    <Border x:Name="MenuContentHolder">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*" MaxHeight="500"/>
                            </Grid.RowDefinitions>

                            <!-- Danh sách Account -->
                            <Border Grid.Row="0" Padding="0,0,0,0" Margin="0,10,0,0">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text= "{Binding FilteredAccountCount, StringFormat='TÀI KHOẢN ({0})'}" Foreground="#FF404040" FontSize="12" FontFamily="Sans Serif Collection"/>
                                    <Button Grid.Column="1"
                                            Command="{Binding CreateAccountCommand}"
                                            Width="25" Height="25"
                                            Style="{StaticResource CreateDataMenuStyle}" Margin="10,0,0,0">
                                        <iconPacks:PackIconMaterial Kind="PlusBox" Width="14" Height="14" VerticalAlignment="Center" Foreground="#FF258A39"/>
                                    </Button>
                                </Grid>
                            </Border>
                            <!-- Tìm kiếm Account -->
                            <StackPanel Grid.Row="1" Margin="10,5" >
                                <Border Background="#FFF1F1F1" CornerRadius="8" Padding="5,2" Height="30">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="15*"/>
                                            <ColumnDefinition Width="182*"/>
                                        </Grid.ColumnDefinitions>
                                        <iconPacks:PackIconMaterial Kind="Magnify" Foreground="Gray" VerticalAlignment="Center" Width="12" />
                                        <TextBox Grid.Column="1" 
                                                 Text="{Binding SearchAccountText, UpdateSourceTrigger=PropertyChanged}"
                                                 Background="Transparent" BorderThickness="0"
                                                 FontSize="12" Margin="5,0,5,0"
                                                 VerticalContentAlignment="Center" Grid.ColumnSpan="2"/>

                                        <TextBlock IsHitTestVisible="False" Text="Tìm tài khoản..." 
                                                   VerticalAlignment="Center" Grid.Column="1" Margin="5,0,5,0"
                                                   Foreground="DarkGray" FontSize="12" Grid.ColumnSpan="2">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SearchAccountText}" Value="">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding SearchAccountText}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </StackPanel>
                            <!-- Danh sách Account-->
                            <ListBox Grid.Row="2"
                                    ItemsSource="{Binding AccountMenuView}"
                                    ItemContainerStyle="{StaticResource MenuItemAccountStyle}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                                    Padding="0,0,0,0"
                                    VerticalAlignment="Stretch">

                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <ContentControl Content="{Binding}"
                                                        ContentTemplate="{StaticResource MenuItemAccount}" />
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>
                </Grid>
                <!-- Settings -->

                <StackPanel Grid.Row="5">
                    <Border Margin="0,10,0,0" BorderBrush="#FF9E9E9E" BorderThickness="0,0.7,0,0" Height="50">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition>
                                    <ColumnDefinition.Style>
                                        <Style TargetType="ColumnDefinition">
                                            <Setter Property="Width" Value="*"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                                    <Setter Property="Width" Value="0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ColumnDefinition.Style>
                                </ColumnDefinition>
                                <ColumnDefinition>
                                    <ColumnDefinition.Style>
                                        <Style TargetType="ColumnDefinition">
                                            <Setter Property="Width" Value="Auto"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                                    <Setter Property="Width" Value="*"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ColumnDefinition.Style>
                                </ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                       Foreground="#FF404040" 
                                       Text="Cài đặt" 
                                       Margin="10,0,0,0" 
                                       FontSize="14" FontFamily="Sans Serif Collection">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <ToggleButton Grid.Column="1"
                                          x:Name="BtnToggleSetting"
                                          Width="25" Height="25"
                                          Margin="0,0,10,0"
                                          Foreground="DimGray"
                                          BorderThickness="1"
                                          Cursor="Hand">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="MainBorder"
                                                Background="Transparent"
                                                CornerRadius="14">
                                            <iconPacks:PackIconMaterial Kind="CogOutline" 
                                                                        Width="16" Height="16"
                                                                        Foreground="{TemplateBinding Foreground}"
                                                                        HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="MainBorder" Property="Background" Value="#E0E0E0"/>
                                                <Setter Property="Foreground" Value="#FF509BFF"/>
                                            </Trigger>

                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="MainBorder" Property="Background" Value="#E0E0E0"/>
                                                <Setter Property="Foreground" Value="#FF509BFF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <Popup IsOpen="{Binding IsChecked, ElementName=BtnToggleSetting, Mode=TwoWay}" 
                                   PlacementTarget="{Binding ElementName=BtnToggleSetting}"
                                   StaysOpen="False" AllowsTransparency="True" PopupAnimation="Slide" Placement="Top">
                                <Border Background="White" CornerRadius="10" BorderThickness="1" BorderBrush="#FFE0E0E0" Padding="10">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="15" Opacity="0.15" ShadowDepth="3" Color="Gray"/>
                                    </Border.Effect>
                                    <StackPanel Width="180">
                                        <TextBlock Text="Server" 
                                           FontSize="11" FontWeight="Bold"
                                           Foreground="Gray" Margin="5,0,0,5"/>

                                        <UniformGrid Columns="2">
                                            <RadioButton Content="CAPP" 
                                                         Style="{StaticResource ServerToggleButtonStyle}"
                                                         GroupName="ServerType"
                                                         FontWeight="SemiBold"
                                                         IsChecked="{Binding ServerType, Converter={StaticResource ComparisonConverter}, ConverterParameter=CAPP, Mode=TwoWay}"/>

                                            <RadioButton Content="PRERP" 
                                                         Style="{StaticResource ServerToggleButtonStyle}"
                                                         FontWeight="SemiBold"
                                                         GroupName="ServerType"
                                                         IsChecked="{Binding ServerType, Converter={StaticResource ComparisonConverter}, ConverterParameter=PRERP, Mode=TwoWay}"/>
                                        </UniformGrid>
                                    </StackPanel>
                                </Border>
                            </Popup>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content Right -->
        <ItemsControl ItemsSource="{Binding Modules}" Grid.Column="1" Grid.ColumnSpan="2">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Visibility="{Binding IsSelected, Converter={StaticResource BoolToVis}}">
                        <ContentControl Content="{Binding}">
                            <ContentControl.Style>
                                <Style TargetType="ContentControl">
                                    <Setter Property="ContentTemplate" Value="{x:Null}" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsLoaded}" Value="True">
                                            <Setter Property="ContentTemplate">
                                                <Setter.Value>
                                                    <DataTemplate>
                                                        <ContentPresenter Content="{Binding}" />
                                                    </DataTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ContentControl.Style>
                        </ContentControl>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </Grid>
</Window>