<Window x:Class="PRERP_TESTER.Views.Dialogs.AddModuleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="New Module"
        Height="auto"
        Width="450"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">

    <Grid>
        <Border Background="White" CornerRadius="20" Margin="15" BorderThickness="0.5" BorderBrush="#FF8E8E8E">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Direction="0" ShadowDepth="0" Opacity="0.2"/>
            </Border.Effect>
            <StackPanel>
                <Border CornerRadius="20,20,0,0" Padding="25,10,20,10" VerticalAlignment="Center" MouseLeftButtonDown="Header_MouseLeftButtonDown">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" x:Name="Title_lable" Text="Thêm mới Module" FontSize="20" Foreground="#FF484848" FontWeight="Medium"/>
                        <Button x:Name="BtnClose"
                                Click="BtnCancel_Click"
                                Grid.Column="1"
                                Width="25" Height="25"
                                Margin="0,0,0,0"
                                Foreground="WhiteSmoke"
                                Style="{StaticResource CloseDialogStyle}">
                            <iconPacks:PackIconMaterial Kind="Close" Width="20" Height="20" VerticalAlignment="Center" Foreground="#FFB9B9B9"/>
                        </Button>
                    </Grid>
                </Border>
                <StackPanel Margin="25,18,25,25">
                    <TextBlock Text="Tên module" FontSize="14" FontWeight="SemiBold" Foreground="#FF464646" Margin="5,0,0,8"/>
                    <Grid Margin="0,0,0,15" Height="50">
                        <Border x:Name="ShadowLayer" 
                                CornerRadius="12" 
                                Background="White">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsKeyboardFocusWithin, ElementName=MainContentBorder}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Setter Property="BorderBrush" Value="#FF2271AF"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" Color="#2196F3" Opacity="0.4"/>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                        <Border x:Name="MainContentBorder"  Background="#FFF7F7F7" CornerRadius="12">
                            <TextBox x:Name="TxtModuleName" Background="Transparent"
                                     BorderThickness="0"
                                     VerticalContentAlignment="Center" Padding="15,0"
                                     FontSize="16" FontWeight="SemiBold" Foreground="#2D3E50"/>
                        </Border>
                    </Grid>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Hủy" Click="BtnCancel_Click" 
                                Padding="20,8"
                                Cursor="Hand"
                                Margin="0,0,10,0"
                                Style="{StaticResource CancelStyle}"/>

                        <Button  Content="Thêm module"
                                 Click="BtnConfirm_Click"
                                 IsDefault="True"
                                 Padding="25,10"
                                 Cursor="Hand"
                                 Style="{StaticResource ConfirmStyle}"/>

                    </StackPanel>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>