<UserControl x:Class="PRERP_TESTER.Views.AccountView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:conv="clr-namespace:PRERP_TESTER.Converters"
             xmlns:ext="clr-namespace:PRERP_TESTER.Extensions"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:helper="clr-namespace:PRERP_TESTER.Helper"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Control.Resources>
        <conv:SubtractValueConverter x:Key="SubtractValueConverter" />
        <helper:Base64ToImageSourceConverter x:Key="Base64ToImageConverter"/>
        <helper:StringNotNullConverter x:Key="StringNotNullConverter"/>
    </Control.Resources>

    <Border Background="WhiteSmoke"
            CornerRadius="6,6,0,0"
            BorderThickness="1"
            BorderBrush="#FFB9B9B9"
            ClipToBounds="True">
        <Border.Effect>
            <DropShadowEffect Color="#FFCECECE"
                      Direction="0"
                      ShadowDepth="2"
                      Opacity="0.3"
                      BlurRadius="7"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                        BorderBrush="#DCDCDC"
                        BorderThickness="0,0,0,1"
                        CornerRadius="7,7,0,0"
                        Background="#FFECECEC"
                        VerticalAlignment="Bottom">

                <Grid Grid.Row="0" x:Name="ParentGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <ListBox Grid.Column="0"
                             AlternationCount="1000"
                             ItemsSource="{Binding TabViewModels}"
                             SelectedItem="{Binding SelectedTab}"
                             ItemContainerStyle="{StaticResource TabWebHeaderStyle}"
                             BorderThickness="0,0,0,0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             Background="Transparent"
                             Grid.Row="0"
                             MaxWidth="{Binding ActualWidth, ElementName=ParentGrid, Converter={StaticResource SubtractValueConverter}, ConverterParameter=40}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="1" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                    </ListBox>
                    <Button Grid.Column="1"
                            Command="{Binding AddTabCommand}"
                            Width="25" Height="25" Margin="5,8,5,8"
                            Style="{StaticResource AddTabButtonStyle}">
                        <iconPacks:PackIconMaterial Kind="Plus" Width="14" Height="14" VerticalAlignment="Center"/>
                    </Button>
                </Grid>
            </Border>

            <ItemsControl ItemsSource="{Binding TabViewModels}" Grid.Row="1">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Grid />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Visibility="{Binding IsSelected, Converter={StaticResource BoolToVis}}">
                            <ContentControl Content="{Binding}">
                                <ContentControl.Style>
                                    <Style TargetType="ContentControl">
                                        <Setter Property="ContentTemplate" Value="{x:Null}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsLoaded}" Value="True">
                                                <Setter Property="ContentTemplate">
                                                    <Setter.Value>
                                                        <DataTemplate>
                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="*"/>
                                                                </Grid.RowDefinitions>
                                                                <!--  webview control  -->
                                                                <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#DCDCDC" BorderThickness="0,0,0,1" Padding="5">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                            <ColumnDefinition Width="*"/>
                                                                        </Grid.ColumnDefinitions>

                                                                        <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,5,0">
                                                                            <Button Command="{Binding BackCommand}"
                                                                                    Style="{StaticResource NavButtonStyle}">
                                                                                <iconPacks:PackIconMaterial Kind="ArrowLeft" Width="14" Height="14" VerticalAlignment="Center"/>
                                                                            </Button>
                                                                            <Button Command="{Binding ForwardCommand}"
                                                                                    Style="{StaticResource NavButtonStyle}"
                                                                                    Margin="5,0">
                                                                                <iconPacks:PackIconMaterial Kind="ArrowRight" Width="14" Height="14" VerticalAlignment="Center"/>
                                                                            </Button>
                                                                            <Button Command="{Binding ReloadCommand}"
                                                                                    Style="{StaticResource NavButtonStyle}">
                                                                                <iconPacks:PackIconMaterial Kind="Refresh" Width="14" Height="14" VerticalAlignment="Center"/>
                                                                            </Button>
                                                                        </StackPanel>

                                                                        <Border Grid.Column="1" Background="White" BorderBrush="#DCDCDC" BorderThickness="1" CornerRadius="15" Padding="10,2">
                                                                            <Grid>
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition Width="Auto"/>
                                                                                    <ColumnDefinition Width="*"/>
                                                                                    <ColumnDefinition Width="Auto"/>
                                                                                </Grid.ColumnDefinitions>

                                                                                <iconPacks:PackIconMaterial x:Name="SecurityIcon" 
                                                                                                            Grid.Column="0" 
                                                                                                            VerticalAlignment="Center" 
                                                                                                            Width="12" Height="12" 
                                                                                                            Margin="0,0,8,0">
                                                                                    <iconPacks:PackIconMaterial.Style>
                                                                                        <Style TargetType="iconPacks:PackIconMaterial">
                                                                                            <Setter Property="Kind" Value="LockOpenVariantOutline"/>
                                                                                            <Setter Property="Foreground" Value="Gray"/>
                                                                                            <Style.Triggers>
                                                                                                <DataTrigger Binding="{Binding IsSecure}" Value="True">
                                                                                                    <Setter Property="Kind" Value="Lock"/>
                                                                                                    <Setter Property="Foreground" Value="#28a745"/>
                                                                                                </DataTrigger>
                                                                                                <DataTrigger Binding="{Binding IsSecure}" Value="False">
                                                                                                    <Setter Property="Kind" Value="AlertCircleOutline"/>
                                                                                                    <Setter Property="Foreground" Value="#dc3545"/>
                                                                                                </DataTrigger>
                                                                                            </Style.Triggers>
                                                                                        </Style>
                                                                                    </iconPacks:PackIconMaterial.Style>
                                                                                </iconPacks:PackIconMaterial>
                                                                                <Grid Grid.Column="1">
                                                                                    <TextBox x:Name="UrlTextBox"
                                                                                             Text="{Binding Url, UpdateSourceTrigger=PropertyChanged}" 
                                                                                             Style="{StaticResource AddressBarTextBoxStyle}"
                                                                                             BorderThickness="0" 
                                                                                             FontSize="14"
                                                                                             VerticalAlignment="Center"
                                                                                             Background="Transparent">
                                                                                        <TextBox.InputBindings>
                                                                                            <KeyBinding Key="Enter" Command="{Binding GoToUrlCommand}"/>
                                                                                        </TextBox.InputBindings>
                                                                                    </TextBox>
                                                                                    <Popup x:Name="AddressPopup"
                                                                                           IsOpen="{Binding IsSuggestionOpen}" 
                                                                                           PlacementTarget="{Binding ElementName=UrlTextBox}"
                                                                                           AllowsTransparency="True"
                                                                                           VerticalOffset="4"
                                                                                           PopupAnimation="Fade"
                                                                                           StaysOpen="False">
                                                                                        <Border Background="White" CornerRadius="0,0,8,8" BorderThickness="1,0,1,1" BorderBrush="#DCDCDC" Width="{Binding ActualWidth, ElementName=UrlTextBox}">
                                                                                            <Border.Effect>
                                                                                                <DropShadowEffect BlurRadius="10" Opacity="0.1" ShadowDepth="3"/>
                                                                                            </Border.Effect>
                                                                                            <ListBox x:Name="SuggestionListBox"
                                                                                                     ItemsSource="{Binding Suggestions}" 
                                                                                                     SelectedItem="{Binding SelectedSuggestion, UpdateSourceTrigger=PropertyChanged}"
                                                                                                     ItemContainerStyle="{StaticResource AddressSuggestionItemStyle}"
                                                                                                     BorderThickness="0" Background="Transparent">
                                                                                                <ListBox.ItemTemplate>
                                                                                                    <DataTemplate>
                                                                                                        <Grid Margin="5" Background="Transparent" x:Name="ItemRoot">
                                                                                                            <Grid.ColumnDefinitions>
                                                                                                                <ColumnDefinition Width="Auto"/>
                                                                                                                <ColumnDefinition Width="*"/>
                                                                                                                <ColumnDefinition Width="Auto"/>
                                                                                                            </Grid.ColumnDefinitions>

                                                                                                            <Grid Grid.Column="0">
                                                                                                                <iconPacks:PackIconMaterial x:Name="DefaultIcon" Kind="History" Width="12" Foreground="Gray" VerticalAlignment="Center"/>
                                                                                                                <Image x:Name="FaviconImage" Width="14" Height="14" VerticalAlignment="Center" HorizontalAlignment="Center"
                                                                                                                        Source="{Binding FaviconBase, Converter={StaticResource Base64ToImageConverter}}"
                                                                                                                        Visibility="Collapsed"/>
                                                                                                            </Grid>

                                                                                                            <StackPanel Grid.Column="1" Margin="10,0" Orientation="Horizontal" VerticalAlignment="Center">
                                                                                                                <TextBlock Text="{Binding Title}" FontSize="12" TextTrimming="CharacterEllipsis"/>
                                                                                                                <TextBlock Text="-" Margin="5,0" Foreground="Gray"/>
                                                                                                                <TextBlock Text="{Binding Url}" Foreground="#8F4D1E" FontSize="11" TextTrimming="CharacterEllipsis" Opacity="0.7"/>
                                                                                                            </StackPanel>

                                                                                                            <Button x:Name="BtnDelete"
                                                                                                                    Grid.Column="2"
                                                                                                                    Width="22" Height="22"
                                                                                                                    Style="{StaticResource NavButtonStyle}"
                                                                                                                    Visibility="Hidden"
                                                                                                                    Command="{Binding DataContext.RemoveSuggestionCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                                                                                    CommandParameter="{Binding}">
                                                                                                                <iconPacks:PackIconMaterial Kind="Close" Width="10" Height="10" Foreground="Gray"/>
                                                                                                            </Button>
                                                                                                        </Grid>

                                                                                                        <DataTemplate.Triggers>
                                                                                                            <DataTrigger Binding="{Binding FaviconBase, Converter={StaticResource StringNotNullConverter}}" Value="True">
                                                                                                                <Setter TargetName="DefaultIcon" Property="Visibility" Value="Collapsed"/>
                                                                                                                <Setter TargetName="FaviconImage" Property="Visibility" Value="Visible"/>
                                                                                                            </DataTrigger>

                                                                                                            <Trigger SourceName="ItemRoot" Property="IsMouseOver" Value="True">
                                                                                                                <Setter TargetName="BtnDelete" Property="Visibility" Value="Visible"/>
                                                                                                            </Trigger>
                                                                                                        </DataTemplate.Triggers>
                                                                                                    </DataTemplate>
                                                                                                </ListBox.ItemTemplate>
                                                                                            </ListBox>
                                                                                        </Border>
                                                                                    </Popup>
                                                                                </Grid>
                                                                            </Grid>
                                                                        </Border>
                                                                    </Grid>
                                                                </Border>
                                                                <!-- webview content  -->
                                                                <wv2:WebView2 Grid.Row="1" ext:WebView2Extensions.AccountID="{Binding UserAccount.SessionFolder}" />
                                                            </Grid>
                                                        </DataTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Border>
</UserControl>
