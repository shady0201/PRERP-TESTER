    <!--- Style Brower address input-->
    <Style TargetType="TextBox" x:Key="AddressBarTextBoxStyle">
        <Setter Property="helpers:TextBoxAddressBehavior.SelectAllOnFocus" Value="True"/>
    </Style>

</ResourceDictionary>