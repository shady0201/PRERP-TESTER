<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:helpers="clr-namespace:PRERP_TESTER.Helpers"
                    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf">
    
    <!--  Style Nút thêm tab  -->
    <Style x:Key="AddTabButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Width" Value="30"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Foreground" Value="#FF757575"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid Background="Transparent">
                        <Ellipse x:Name="bg" Fill="{TemplateBinding Background}"/>

                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="bg" Property="Fill" Value="#E8EAED"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="bg" Property="Fill" Value="#DADCE0"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.3"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Style Nút đóng tab  -->
    <Style x:Key="CloseTabButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="Gray"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Ellipse x:Name="HoverEllipse" Fill="Transparent" />
                        <Path x:Name="CloseIcon"
                          Data="M 6,6 L 12,12 M 12,6 L 6,12" 
                          Stroke="Gray" 
                          StrokeThickness="1.5" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"
                          Stretch="Uniform"
                          Width="10" Height="10"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="HoverEllipse" Property="Fill" Value="#FFE2E2E2"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Style webtab header style -->
    <Style x:Key="TabWebHeaderStyle" TargetType="ListBoxItem">
        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
        <Setter Property="Background" Value="#f0f0f0"/>
        <Setter Property="BorderBrush" Value="#ccc"/>
        <Setter Property="BorderThickness" Value="1,1,1,0"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="MinWidth" Value="40"/>
        <Setter Property="MaxWidth" Value="200"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Grid MaxWidth="200">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border x:Name="border" 
                                Grid.Column="0"
                                Background="Transparent"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0,0,0,0"
                                Height="40"
                                Padding="8,0,8,0"
                                HorizontalAlignment="Stretch"
                                Width="200"
                                MaxWidth="200"
                                MinWidth="40">
                            
                            <Grid VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                       Text="SFT" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,5,0" 
                                       Foreground="#FF2A6FDE" 
                                       FontWeight="Bold" 
                                       FontSize="10"/>

                                <TextBlock Grid.Column="1" 
                                       Text="{Binding Title}" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Left" 
                                       TextTrimming="CharacterEllipsis"/>

                                <Button Grid.Column="2" 
                                    Command="{Binding CloseTabCommand}" 
                                    FontSize="14"
                                    Cursor="Hand"
                                    Width="18" Height="18"
                                    Margin="5,0,0,0"
                                    Style="{StaticResource CloseTabButtonStyle}"/>
                            </Grid>
                        </Border>

                        <Rectangle x:Name="Separator"
                               Grid.Column="1"
                               Width="1"
                               Height="16"
                               Fill="#DCDCDC"
                               VerticalAlignment="Center"
                               Margin="0"/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                            <Setter TargetName="border" Property="CornerRadius" Value="4,0,0,0"/>
                        </Trigger>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="White"/>
                        </Trigger>

                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="border" Property="Background" Value="White"/>
                            <Setter TargetName="border" Property="BorderThickness" Value="0,0,0,2"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="#FF3579D4"/>
                            <Setter Property="Panel.ZIndex" Value="1"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter TargetName="Separator" Property="Visibility" Value="Hidden"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Style webtab control style -->
