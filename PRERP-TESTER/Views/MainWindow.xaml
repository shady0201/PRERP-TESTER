<Window x:Name="AppMain" x:Class="PRERP_TESTER.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:helper="clr-namespace:PRERP_TESTER.Helper"
        xmlns:local="clr-namespace:PRERP_TESTER.Services"
        xmlns:conv="clr-namespace:PRERP_TESTER.Converters"
        Icon="/Assets/icon.ico"
        Title="PRERP TESTER" 
        Height="768" Width="1366"
        Closing="Window_Closing"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <conv:SubtractValueConverter x:Key="SubtractValueConverter" />
    </Window.Resources>

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="MenuColumn">
                <ColumnDefinition.Style>
                    <Style TargetType="ColumnDefinition">
                        <Setter Property="Width" Value="250"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <helper:GridLengthAnimation 
                                                        Storyboard.TargetProperty="Width"
                                                        From="250"
                                                        To="50" 
                                                        Duration="0:0:0.3">
                                                <helper:GridLengthAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </helper:GridLengthAnimation.EasingFunction>
                                            </helper:GridLengthAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                                <DataTrigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <helper:GridLengthAnimation 
                                                    Storyboard.TargetProperty="Width"
                                                    From="50"
                                                    To="250" 
                                                    Duration="0:0:0.3">
                                                <helper:GridLengthAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </helper:GridLengthAnimation.EasingFunction>
                                            </helper:GridLengthAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.ExitActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ColumnDefinition.Style>
            </ColumnDefinition>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menu Left -->
        <Border Grid.Column="0"
                BorderBrush="#FFCCCCCC"
                BorderThickness="0,0,1,0"
                Padding="5,0,5,0"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                ScrollViewer.VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <!--- Title -->
                <Border Grid.Row="0" Height="37" Padding="0,0,0,0" Margin="0,10,0,10">
                    <Grid VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0"  Source="/Assets/logo.png" 
                               Width="28" Height="28"
                               Stretch="Fill"
                               Margin="5,0,5,0"
                               Cursor="Hand">
                            <Image.InputBindings>
                                <MouseBinding MouseAction="LeftClick" Command="{Binding TestCommand}"/>
                            </Image.InputBindings>
                        </Image>
                        <TextBlock Grid.Column="1" Width="auto" Height="auto" Text="{Binding ServerType}" Foreground="#FF404040" FontSize="14" FontWeight="SemiBold" FontFamily="Sans Serif Collection">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <Button Grid.Column="2"
                                Command="{Binding ToggleMenuCommand}"
                                Style="{StaticResource StyleButtonCollapse}"
                                Margin="0,0,5,0">
                            <iconPacks:PackIconMaterial Kind="ArrowCollapseLeft" VerticalAlignment="Center"/>
                        </Button>
                    </Grid>
                </Border>
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <!-- Menu content-->
                        <StackPanel Grid.Row="0">
                            <!--Label module-->
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Stretch">
                                            <TextBlock Foreground="#FF404040" FontSize="13" FontFamily="Sans Serif Collection">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="Module"/>
                                                        <Setter Property="HorizontalAlignment" Value="Left"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                                                <Setter Property="Text" Value="M"/>
                                                                <Setter Property="FontSize" Value="22"/>
                                                                <Setter Property="FontWeight" Value="Bold"/>
                                                                <Setter Property="Margin" Value="14,0,0,0"/>
                                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock Text="{Binding FilteredModuleCount, StringFormat='({0})'}" Foreground="#FF3A3A3A" FontSize="13" FontWeight="SemiBold" FontFamily="Sans Serif Collection">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="HorizontalAlignment" Value="Left"/>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Setter Property="Padding" Value="5,0,0,0"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Setter Property="Padding" Value="0,0,0,0"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                        <Button Command="{Binding CreateModuleCommand}"
                                            Width="25" Height="25"
                                            Margin="10,0,0,0"
                                            Style="{StaticResource CreateDataMenuStyle}">
                                            <iconPacks:PackIconMaterial Kind="PlusBox" Width="14" Height="14" VerticalAlignment="Center" Foreground="Green"/>
                                        </Button>
                                    </Grid>
                                    <Button Grid.Column="1"
                                            Command="{Binding ToggleModuleExpandCommand}"
                                            Width="25" Height="25"
                                            Margin="10,0,0,0"
                                            Style="{StaticResource CreateDataMenuStyle}">
                                        <iconPacks:PackIconMaterial Grid.Column="1" Width="14" Height="14" VerticalAlignment="Center" Foreground="#FF5B5B5B" >
                                            <iconPacks:PackIconMaterial.Style>
                                                <Style TargetType="iconPacks:PackIconMaterial">
                                                    <Setter Property="Kind" Value="ChevronDown"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsModuleExpanded}" Value="False">
                                                            <Setter Property="Kind" Value="ChevronLeft"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </iconPacks:PackIconMaterial.Style>
                                        </iconPacks:PackIconMaterial>
                                    </Button>
                                </Grid>
                            </StackPanel>
                            <!-- Danh sách Module -->
                            <StackPanel>
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsModuleExpanded}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <StackPanel Margin="10,5" >
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <Border Background="#FFF1F1F1" CornerRadius="8" Padding="5,2" Height="30">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <iconPacks:PackIconMaterial Kind="Magnify" Foreground="Gray" VerticalAlignment="Center" Width="12" />
                                            <TextBox Grid.Column="1" 
                                                     Text="{Binding SearchModuleText, UpdateSourceTrigger=PropertyChanged}"
                                                     Background="Transparent" BorderThickness="0" 
                                                     FontSize="12" Margin="5,0"
                                                     VerticalContentAlignment="Center"/>

                                            <TextBlock IsHitTestVisible="False" Text="Tìm module..." 
                                                       VerticalAlignment="Center" Grid.Column="1" Margin="5,0"
                                                       Foreground="DarkGray" FontSize="12">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding SearchModuleText}" Value="">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding SearchModuleText}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                                <ListBox ItemsSource="{Binding ModuleMenuView}"
                                        SelectedItem="{Binding SelectedModule}"
                                        ItemContainerStyle="{StaticResource MenuItemModuleStyle}"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="0,0,0,0"
                                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                        ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                        VerticalAlignment="Stretch">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <ContentControl Content="{Binding}"
                                                            ContentTemplate="{StaticResource MenuItemModule}" />
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                            <!-- Account Menu -->
                            <Grid Grid.Row="4">
                                <Border x:Name="MenuContentHolder">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Label Account -->
                                        <Border Grid.Row="0" Padding="0,0,0,0" Margin="0,10,0,0">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid Grid.Column="0">
                                                    <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Stretch">
                                                        <TextBlock Text= "Tài khoản" Foreground="#FF404040" FontSize="13" FontFamily="Sans Serif Collection"/>
                                                        <TextBlock Text= "{Binding FilteredAccountCount,StringFormat='({0})'}" Padding="5,0,0,0" Foreground="#FF3A3A3A" FontSize="13" FontWeight="SemiBold" FontFamily="Sans Serif Collection"/>
                                                    </StackPanel>
                                                    <Button Grid.Column="1"
                                                            Command="{Binding CreateAccountCommand}"
                                                            Width="25" Height="25"
                                                            Style="{StaticResource CreateDataMenuStyle}" Margin="10,0,0,0">
                                                        <iconPacks:PackIconMaterial Kind="PlusBox" Width="14" Height="14" VerticalAlignment="Center" Foreground="#FF258A39"/>
                                                    </Button>
                                                </Grid>
                                                <Button Grid.Column="1"
                                                        Command="{Binding ToggleAccountExpandCommand}"
                                                        Width="25" Height="25"
                                                        Margin="10,0,0,0"
                                                        Style="{StaticResource CreateDataMenuStyle}">
                                                    <iconPacks:PackIconMaterial Grid.Column="1" Width="14" Height="14" VerticalAlignment="Center" Foreground="#FF5B5B5B" >
                                                        <iconPacks:PackIconMaterial.Style>
                                                            <Style TargetType="iconPacks:PackIconMaterial">
                                                                <Setter Property="Kind" Value="ChevronDown"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsAccountExpanded}" Value="False">
                                                                        <Setter Property="Kind" Value="ChevronLeft"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </iconPacks:PackIconMaterial.Style>
                                                    </iconPacks:PackIconMaterial>
                                                </Button>
                                            </Grid>
                                        </Border>
                                        <StackPanel Grid.Row="1">
                                            <StackPanel.Style>
                                                <Style TargetType="StackPanel">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsAccountExpanded}" Value="False">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Style>
                                            <!-- Tìm kiếm Account -->
                                            <StackPanel Margin="10,5" >
                                                <Border Background="#FFF1F1F1" CornerRadius="8" Padding="5,2" Height="30">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="15*"/>
                                                            <ColumnDefinition Width="182*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <iconPacks:PackIconMaterial Kind="Magnify" Foreground="Gray" VerticalAlignment="Center" Width="12" />
                                                        <TextBox Grid.Column="1" 
                                                             Text="{Binding SearchAccountText, UpdateSourceTrigger=PropertyChanged}"
                                                             Background="Transparent" BorderThickness="0"
                                                             FontSize="12" Margin="5,0,5,0"
                                                             VerticalContentAlignment="Center" Grid.ColumnSpan="2"/>

                                                        <TextBlock IsHitTestVisible="False" Text="Tìm tài khoản..." 
                                                               VerticalAlignment="Center" Grid.Column="1" Margin="5,0,5,0"
                                                               Foreground="DarkGray" FontSize="12" Grid.ColumnSpan="2">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding SearchAccountText}" Value="">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding SearchAccountText}" Value="{x:Null}">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Grid>
                                                </Border>
                                            </StackPanel>
                                            <!-- Danh sách Account-->
                                            <ListBox ItemsSource="{Binding AccountMenuView}"
                                                    ItemContainerStyle="{StaticResource MenuItemAccountStyle}"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Padding="0,0,0,0"
                                                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                    ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                                    VerticalAlignment="Stretch">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <ContentControl Content="{Binding}"
                                                                    ContentTemplate="{StaticResource MenuItemAccount}" />
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
                <!-- Settings -->
                <StackPanel Grid.Row="2">
                    <Border Margin="0,10,0,0" BorderBrush="#FF9E9E9E" BorderThickness="0,0.7,0,0" Height="50">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*">
                                    <ColumnDefinition.Style>
                                        <Style TargetType="ColumnDefinition">
                                            <Setter Property="Width" Value="*"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                                    <Setter Property="Width" Value="0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ColumnDefinition.Style>
                                </ColumnDefinition>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition>
                                    <ColumnDefinition.Style>
                                        <Style TargetType="ColumnDefinition">
                                            <Setter Property="Width" Value="Auto"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                                    <Setter Property="Width" Value="*"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ColumnDefinition.Style>
                                </ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Foreground="#FF404040" 
                                       Text="Cài đặt" 
                                       Margin="10,0,0,0"
                                       FontSize="14" FontFamily="Sans Serif Collection" Grid.ColumnSpan="2">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <ToggleButton Grid.Column="1"
                                          x:Name="BtnToggleSetting"
                                          Width="25" Height="25"
                                          Margin="6,6,10,6"
                                          Foreground="DimGray"
                                          BorderThickness="1"
                                          Cursor="Hand">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="MainBorder"
                                                Background="Transparent"
                                                CornerRadius="14">
                                            <iconPacks:PackIconMaterial Kind="CogOutline" 
                                                    Width="16" Height="16"
                                                    Foreground="{TemplateBinding Foreground}"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="MainBorder" Property="Background" Value="#E0E0E0"/>
                                                <Setter Property="Foreground" Value="#FF509BFF"/>
                                            </Trigger>

                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="MainBorder" Property="Background" Value="#E0E0E0"/>
                                                <Setter Property="Foreground" Value="#FF509BFF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <Popup IsOpen="{Binding IsChecked, ElementName=BtnToggleSetting, Mode=TwoWay}"
                                   PlacementTarget="{Binding ElementName=BtnToggleSetting}"
                                   StaysOpen="False" AllowsTransparency="True" PopupAnimation="Slide" Placement="Top" Grid.ColumnSpan="2">
                                <Border Background="#FFF9F9F9" CornerRadius="10" BorderThickness="2" BorderBrush="#FFDADADA" Padding="10,10,10,5">
                                    <StackPanel Width="auto">
                                        <TextBlock Text="Server"
                                                   FontSize="14" FontWeight="SemiBold" Margin="5,0,0,5" Foreground="#FF444444"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                            <RadioButton Content="CAPP" 
                                                         Style="{StaticResource ServerToggleLeftStyle}"
                                                         GroupName="ServerType"
                                                         Cursor="Hand"
                                                         FontWeight="SemiBold"
                                                         IsChecked="{Binding ServerType, Converter={StaticResource ComparisonConverter}, ConverterParameter=CAPP, Mode=TwoWay}"/>
                                            <RadioButton Content="PRERP"
                                                         Cursor="Hand"
                                                         Style="{StaticResource ServerToggleRightStyle}"
                                                         FontWeight="SemiBold"
                                                         GroupName="ServerType"
                                                         IsChecked="{Binding ServerType, Converter={StaticResource ComparisonConverter}, ConverterParameter=PRERP, Mode=TwoWay}"/>
                                        </StackPanel>
                                        
                                        <TextBlock Text="Data"
                                                   Margin="5,10,0,5"
                                                   FontSize="14" FontWeight="SemiBold" Foreground="#FF444444"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Content="Import"
                                                    Tag="TrayArrowDown"
                                                    Style="{StaticResource ExportImportButtonStyle}"
                                                    Command="{Binding ImportDataCommand}"
                                                    Margin="0,0,10,0"/>
                                            <Button Content="Export"
                                                    Tag="TrayArrowUp"
                                                    Style="{StaticResource ExportImportButtonStyle}"
                                                    Command="{Binding ExportDataCommand}"/>
                                        </StackPanel>

                                        <StackPanel Margin="5,20,0,0" Orientation="Horizontal">
                                            
                                            <StackPanel Margin="0,0,0,10">
                                                <TextBlock Text="Dark mode"
                                                       VerticalAlignment="Center"
                                                       FontSize="14" FontWeight="SemiBold"
                                                       Foreground="#FF444444"/>
                                            </StackPanel>
                                            <StackPanel>
                                                <CheckBox Style="{StaticResource ModernSwitchStyle}"
                                                          Margin="10,0,0,0"
                                                          IsChecked="{Binding IsDarkMode, Mode=TwoWay}"/>
                                            </StackPanel>
                                        </StackPanel>

                                    </StackPanel>
                                </Border>
                            </Popup>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content Right -->
        <ItemsControl ItemsSource="{Binding Modules}" Grid.Column="1" Grid.ColumnSpan="2">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Visibility="{Binding IsSelected, Converter={StaticResource BoolToVis}}">
                        <ContentControl Content="{Binding}">
                            <ContentControl.Style>
                                <Style TargetType="ContentControl">
                                    <Setter Property="ContentTemplate" Value="{x:Null}" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsLoaded}" Value="True">
                                            <Setter Property="ContentTemplate">
                                                <Setter.Value>
                                                    <DataTemplate>
                                                        <ContentPresenter Content="{Binding}" />
                                                    </DataTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ContentControl.Style>
                        </ContentControl>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Toast -->
        <Popup x:Name="ToastPopup"
               IsOpen="True" 
               AllowsTransparency="True" 
               Placement="Bottom"
               PlacementTarget="{Binding ElementName=AppMain}"
               HorizontalOffset="{Binding ActualWidth, ElementName=AppMain, Converter={StaticResource SubtractValueConverter}, ConverterParameter=370}"
               VerticalOffset="-70"
               Height="auto">
            <Grid VerticalAlignment="Bottom" Margin="0,0,0,20" Background="red">
                <ItemsControl Grid.Column="0" Grid.ColumnSpan="2"
                          ItemsSource="{x:Static local:ToastService.Toasts}"
                          ItemTemplate="{StaticResource ToastTemplate}"
                          VerticalAlignment="Bottom" HorizontalAlignment="Right"
                          Margin="0,0,10,20">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform/>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                                            From="400" To="0" Duration="0:0:0.4">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                         From="0" To="1" Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Style.Triggers>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                </ItemsControl>
            </Grid>
        </Popup>
    </Grid>
</Window>