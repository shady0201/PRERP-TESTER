<Window x:Class="PRERP_TESTER.Views.Dialogs.AddAccountDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="Create/Update Account"
        Height="auto" Width="450"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
    <Grid>
        <Border Background="White" CornerRadius="20" Margin="15" BorderThickness="0.5" BorderBrush="#FF8E8E8E">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Direction="0" ShadowDepth="0" Opacity="0.2"/>
            </Border.Effect>

            <StackPanel>
                <Border CornerRadius="20,20,0,0" BorderBrush="#FFC8C8C8" Padding="25,10,20,10" Background="#FF509BFF" VerticalAlignment="Center" MouseLeftButtonDown="Header_MouseLeftButtonDown" BorderThickness="0,0,0,0.5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" x:Name="Title_lable" Text="Thêm Tài Khoản" FontSize="20" Foreground="White" FontWeight="Medium"/>
                        <Button x:Name="BtnClose"
                                Click="BtnCancel_Click"
                                Grid.Column="1"
                                Width="25" Height="25"
                                Margin="0,0,0,0"
                                Foreground="WhiteSmoke"
                                Style="{StaticResource CloseDialogStyle}">
                            <iconPacks:PackIconMaterial Kind="Close" Width="20" Height="20" VerticalAlignment="Center"/>
                        </Button>
                    </Grid>
                </Border>
                <StackPanel Margin="25,18,25,25">
                    <TextBlock Text="Username" FontSize="14" Foreground="#FF464646" Margin="5,0,0,8"/>
                    <Border x:Name="BorderUserName" Background="#FFECECEC" CornerRadius="12" Height="50" Margin="0,0,0,15">
                        <TextBox x:Name="TxtUsername" Background="Transparent" BorderThickness="0"
                                 VerticalContentAlignment="Center" Padding="15,0"
                                 PreviewTextInput="TxtUsername_PreviewTextInput"
                                 PreviewKeyDown="TxtUsername_PreviewKeyDown"
                                 DataObject.Pasting="TxtUsername_Pasting"
                                 FontSize="16" FontWeight="SemiBold" Foreground="#2D3E50"/>
                    </Border>

                    <TextBlock Text="Password" FontSize="14" Foreground="#FF464646" Margin="5,0,0,8"/>
                    <Border Background="#FFECECEC" CornerRadius="12" Height="50" Margin="0,0,0,20" VerticalAlignment="Center">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <PasswordBox Grid.Column="0" x:Name="TxtPassword" 
                                             Background="Transparent" BorderThickness="0"
                                             VerticalContentAlignment="Center" Padding="15,0"
                                             PasswordChar="●" FontSize="16" FontWeight="SemiBold" Foreground="#2D3E50"
                                             Visibility="Visible"/>

                            <TextBox Grid.Column="0"
                                     x:Name="TxtPasswordVisible" 
                                     Background="Transparent" BorderThickness="0"
                                     VerticalContentAlignment="Center" Padding="15,0"
                                     FontSize="16" FontWeight="SemiBold" Foreground="#2D3E50"
                                     Visibility="Collapsed"/>

                            <ToggleButton x:Name="BtnShowPassword"
                                          Grid.Column="1"
                                          Background="Transparent" BorderThickness="0"
                                          Margin="0,0,10,0" Cursor="Hand"
                                          Click="BtnShowPassword_Click">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </ToggleButton.Template>
                                <iconPacks:PackIconMaterial x:Name="IconEye" Kind="EyeOff" Width="20" Height="20" VerticalAlignment="Center" Foreground="#FF8E8E8E">
                                    <iconPacks:PackIconMaterial.Style>
                                        <Style TargetType="{x:Type iconPacks:PackIconMaterial}">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FFE2E2E2"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </iconPacks:PackIconMaterial.Style>
                                </iconPacks:PackIconMaterial>
                            </ToggleButton>
                        </Grid>
                    </Border>

                    <TextBlock Text="Tên hiển thị" FontSize="14" Foreground="#FF464646" Margin="5,0,0,8"/>
                    <Border Background="#FFECECEC" CornerRadius="12" Height="50" Margin="0,0,0,20">
                        <TextBox x:Name="TxtDisplayName" Background="Transparent" BorderThickness="0"
                                 VerticalContentAlignment="Center" Padding="15,0"
                                 FontSize="16" FontWeight="SemiBold" Foreground="#2D3E50"/>
                    </Border>

                    <TextBlock Text="Loại tài khoản" FontSize="14" Foreground="#FF464646" Margin="5,0,0,8"/>
                    <StackPanel Orientation="Horizontal" Margin="5,0,0,20">
                        <RadioButton x:Name="RbStaff" Content="Nhân viên" 
                                     GroupName="stype"
                                     IsChecked="True"
                                     FontSize="14"
                                     Foreground="#FF2D3E50" FontWeight="Medium"
                                     VerticalContentAlignment="Center" Cursor="Hand"/>

                        <RadioButton x:Name="RbStudent" Content="Sinh viên"
                                     GroupName="stype"
                                     Foreground="#FF2D3E50" FontSize="14" FontWeight="Medium" Margin="20,0,0,0"
                                     VerticalContentAlignment="Center" Cursor="Hand"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Hủy" Click="BtnCancel_Click" 
                                IsDefault="False"
                                Padding="25,10"
                                Margin="0,0,10,0"
                                Cursor="Hand"
                                Style="{StaticResource CancelStyle}"/>

                        <Button x:Name="BtnConfirm"
                                Content="Thêm tài khoản"
                                Click="BtnConfirm_Click"
                                IsDefault="True"
                                Padding="25,10"
                                Cursor="Hand"
                                Style="{StaticResource ConfirmStyle}"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
