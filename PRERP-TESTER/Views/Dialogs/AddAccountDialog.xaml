<Window x:Class="PRERP_TESTER.Views.Dialogs.AddAccountDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRERP_TESTER.Views.Dialogs"
        Title="Add New Account"
        Height="auto" Width="450"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
    <Grid>
        <Border Background="White" CornerRadius="20" Margin="15" BorderThickness="0.5" BorderBrush="#FF8E8E8E">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Direction="0" ShadowDepth="0" Opacity="0.2"/>
            </Border.Effect>

            <StackPanel>
                <Border CornerRadius="20,20,0,0" BorderBrush="#FFC8C8C8" Padding="25,10,0,10" Background="#FFEFEFEF" VerticalAlignment="Center" MouseLeftButtonDown="Header_MouseLeftButtonDown" BorderThickness="0,0,0,0.5">
                    <TextBlock Text="Thêm Tài Khoản" FontSize="20" Foreground="#FF2F2F2F" FontWeight="Medium"/>
                </Border>
                <StackPanel Margin="25,18,25,25">
                    <TextBlock Text="Username" FontSize="14" Foreground="#FF464646" Margin="5,0,0,8"/>
                    <Border Background="#FFECECEC" CornerRadius="12" Height="50" Margin="0,0,0,15">
                        <TextBox x:Name="TxtUsername" Background="Transparent" BorderThickness="0"
                                 VerticalContentAlignment="Center" Padding="15,0"
                                 PreviewTextInput="TxtUsername_PreviewTextInput"
                                 PreviewKeyDown="TxtUsername_PreviewKeyDown"
                                 DataObject.Pasting="TxtUsername_Pasting"
                                 FontSize="16" FontWeight="SemiBold" Foreground="#2D3E50"/>
                    </Border>

                    <TextBlock Text="Password" FontSize="14" Foreground="#FF464646" Margin="5,0,0,8"/>
                    <Border Background="#FFECECEC" CornerRadius="12" Height="50" Margin="0,0,0,20">
                        <PasswordBox x:Name="TxtPassword" Background="Transparent" BorderThickness="0"
                                 VerticalContentAlignment="Center" Padding="15,0"
                                  PasswordChar="●"
                                 FontSize="16" FontWeight="SemiBold" Foreground="#2D3E50"/>
                    </Border>

                    <TextBlock Text="Tên hiển thị" FontSize="14" Foreground="#FF464646" Margin="5,0,0,8"/>
                    <Border Background="#FFECECEC" CornerRadius="12" Height="50" Margin="0,0,0,20">
                        <TextBox x:Name="TxtDisplayName" Background="Transparent" BorderThickness="0"
                                 VerticalContentAlignment="Center" Padding="15,0"
                                 FontSize="16" FontWeight="SemiBold" Foreground="#2D3E50"/>
                    </Border>

                    <TextBlock Text="Loại tài khoản" FontSize="14" Foreground="#FF464646" Margin="5,0,0,8"/>
                    <StackPanel Orientation="Horizontal" Margin="5,0,0,20">
                        <RadioButton x:Name="RbStaff" Content="Nhân viên" 
                                     GroupName="stype"
                                     IsChecked="True"
                                     Foreground="#FF2D3E50" FontWeight="Medium"
                                     VerticalContentAlignment="Center" Cursor="Hand"/>

                        <RadioButton x:Name="RbStudent" Content="Sinh viên"
                                     GroupName="stype"
                                     Foreground="#FF2D3E50" FontWeight="Medium" Margin="20,0,0,0"
                                     VerticalContentAlignment="Center" Cursor="Hand"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Hủy" Click="BtnCancel_Click" 
                                IsDefault="False"
                                Padding="25,10"
                                Cursor="Hand"
                                Style="{StaticResource CancelStyle}"/>

                        <Button Content="Thêm tài khoản"
                                Click="BtnConfirm_Click"
                                IsDefault="True"
                                Padding="25,10"
                                Cursor="Hand"
                                Style="{StaticResource ConfirmStyle}"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
