<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks">

    <!-- Module item -->
    <DataTemplate x:Key="MenuItemModule">
        <Border>
            <Grid Height="40" ToolTipService.InitialShowDelay="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="32"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="28"/>
                </Grid.ColumnDefinitions>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="ToolTip" Value="{x:Null}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding DataContext.IsMenuCollapsed, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                <Setter Property="ToolTip">
                                    <Setter.Value>
                                        <ToolTip Style="{StaticResource TooltipMenuLeft}" Content="{Binding Name}"/>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <!-- Module Icon -->
                <iconPacks:PackIconMaterial Kind="Folder" 
                        Width="14" Height="14"
                        Grid.Column="0"
                        Margin="4,0,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <iconPacks:PackIconMaterial.Style>
                        <Style TargetType="{x:Type iconPacks:PackIconMaterial}">
                            <Setter Property="Foreground" Value="#FF9A9A9A"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                    <Setter Property="Foreground" Value="#FF226DE8"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </iconPacks:PackIconMaterial.Style>
                </iconPacks:PackIconMaterial>

                <!-- Module Name -->
                <TextBlock  Grid.Column="1"
					    VerticalAlignment="Center"
					    Text="{Binding Name}"
                        Margin="5,0,0,0"
					    TextTrimming="CharacterEllipsis">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#FF1F2937"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}" Value="True">
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding DataContext.IsMenuCollapsed, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>

                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- phải -->
                <TextBlock Grid.Column="2"
					   VerticalAlignment="Center"
					   HorizontalAlignment="Center"
					   FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="#FF9CA3AF">
                <iconPacks:PackIconMaterial Grid.Column="2" 
                                            Kind="ChevronRight" 
                                            Width="10" Height="10" />
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DataContext.IsMenuCollapsed, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Border>
    </DataTemplate>
    <!-- Account Item-->
    <DataTemplate x:Key="MenuItemAccount">
        <Border Background="Transparent">
            <Grid Height="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <iconPacks:PackIconMaterial Margin="10,0,0,0" VerticalAlignment="Center" Width="14" Height="14">
                    <iconPacks:PackIconMaterial.Style>
                        <Style TargetType="{x:Type iconPacks:PackIconMaterial}">
                            <Setter Property="Kind" Value="AccountTie"/>
                            <Setter Property="Foreground" Value="#FF6B6B6B"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Stype}" Value="STUDENT">
                                    <Setter Property="Kind" Value="School"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </iconPacks:PackIconMaterial.Style>
                </iconPacks:PackIconMaterial>

                <TextBlock Grid.Column="1" Text="{Binding DisplayName}" VerticalAlignment="Center" 
                       Margin="10,0,0,0" Foreground="#FF1F2937" FontSize="13" TextTrimming="CharacterEllipsis"/>

                <Grid Grid.Column="2" Margin="0,0">
                    <ToggleButton x:Name="BtnToggleMenu"
                                  Width="25" Height="25"
                                  Margin="0,0,10,0"
                                  Foreground="DimGray"
                                  BorderThickness="1"
                                  Cursor="Hand">
                        <ToggleButton.Template>
                            <ControlTemplate TargetType="ToggleButton">
                                <Border x:Name="MainBorder"
                                        Background="Transparent"
                                        CornerRadius="14">
                                    <iconPacks:PackIconMaterial Kind="DotsVertical" 
                                            Width="16" Height="16"
                                            Foreground="{TemplateBinding Foreground}"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="MainBorder" Property="Background" Value="#E0E0E0"/>
                                        <Setter Property="Foreground" Value="#FF509BFF"/>
                                    </Trigger>

                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="MainBorder" Property="Background" Value="#E0E0E0"/>
                                        <Setter Property="Foreground" Value="#FF509BFF"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </ToggleButton.Template>
                    </ToggleButton>

                    <Popup IsOpen="{Binding IsChecked, ElementName=BtnToggleMenu, Mode=TwoWay}" 
                           PlacementTarget="{Binding ElementName=BtnToggleMenu}"
                           Panel.ZIndex="2"
                           StaysOpen="False" 
                           AllowsTransparency="True" 
                           PopupAnimation="Slide"
                           Placement="Bottom"
                           HorizontalOffset="0"
                           VerticalOffset="0">
                        <Border Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="#FFE0E0E0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" Opacity="0.1" ShadowDepth="2"/>
                            </Border.Effect>
                            <StackPanel Width="140" Margin="5">
                                <Button Style="{StaticResource ActionMenuItemStyle}"
                                    Command="{Binding DataContext.EditAccountCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                    CommandParameter="{Binding}">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="PencilOutline" Width="14" Height="14" VerticalAlignment="Center" Foreground="#FF4B5563"/>
                                        <TextBlock Text="Chỉnh sửa" Margin="10,0,0,0" VerticalAlignment="Center" Foreground="#FF374151"/>
                                    </StackPanel>
                                </Button>

                                <Button Style="{StaticResource ActionMenuItemStyle}"
                                    Command="{Binding DataContext.RemoveAccountCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                    CommandParameter="{Binding}">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="DeleteOutline" Width="14" Height="14" VerticalAlignment="Center" Foreground="#EF4444"/>
                                        <TextBlock Text="Xóa tài khoản" Margin="10,0,0,0" VerticalAlignment="Center" Foreground="#EF4444"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>
                    </Popup>
                </Grid>
            </Grid>
        </Border>
    </DataTemplate>

</ResourceDictionary>
