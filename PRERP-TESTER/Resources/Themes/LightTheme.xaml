<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Background -->
    <SolidColorBrush x:Key="PrimaryBackground" Color="#FFE6E6E6"/> <!-- Main background -->
    <SolidColorBrush x:Key="SecondaryBackground" Color="#f5f5f5"/> <!-- Menu, account list, card -->
    
    <!-- Border -->
    <SolidColorBrush x:Key="BorderBrushDefault" Color="#FFCECECE"/>

    <!-- Text -->
    <SolidColorBrush x:Key="PrimaryText" Color="#333333"/>
    
    <!-- Icon -->
    <SolidColorBrush x:Key="IconColor" Color="#FF757575"/>
    <SolidColorBrush x:Key="IconHoverColor" Color="#E8EAED"/>

    <!-- Item List-->
    <SolidColorBrush x:Key="ItemSelectedBackground" Color="#007ACC" Opacity="0.15" />
    
    <!-- Browser -->
    <SolidColorBrush x:Key="BrowserTabBackground" Color="Gainsboro" />
    <SolidColorBrush x:Key="BrowserTabSelect" Color="#FFF7F9FB" />

    <!-- Separator -->
    <SolidColorBrush x:Key="SeparatorBackground" Color="#d0d0d0"/>

    <!-- Tooltip -->
    <SolidColorBrush x:Key="TooltipBackground" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="TooltipForeground" Color="#f7f8f8"/>

    <!-- Input -->
    <SolidColorBrush x:Key="InputBackground" Color="#fbfbfb"/>
    <SolidColorBrush x:Key="InputBorder" Color="#FFD8D8D8"/>
    <SolidColorBrush x:Key="InputForeColor" Color="#2D3E50"/>
    <SolidColorBrush x:Key="InputPlaceholder" Color="#9CA3AF"/>

</ResourceDictionary>
