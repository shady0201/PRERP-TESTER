<Window x:Name="AppMain" x:Class="PRERP_TESTER.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:helper="clr-namespace:PRERP_TESTER.Helper"
        xmlns:local="clr-namespace:PRERP_TESTER.Services"
        xmlns:conv="clr-namespace:PRERP_TESTER.Converters"
        xmlns:views="clr-namespace:PRERP_TESTER.Views.UserControls"
        Icon="/Assets/icon.ico"
        Title="PRERP TESTER" 
        Height="768" Width="1366"
        Closing="Window_Closing"
        WindowStartupLocation="CenterScreen">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="MenuColumn">
                <ColumnDefinition.Style>
                    <Style TargetType="ColumnDefinition">
                        <Setter Property="Width" Value="300"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <helper:GridLengthAnimation 
                                                        Storyboard.TargetProperty="Width"
                                                        From="300"
                                                        To="50" 
                                                        Duration="0:0:0.3">
                                                <helper:GridLengthAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </helper:GridLengthAnimation.EasingFunction>
                                            </helper:GridLengthAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                                <DataTrigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <helper:GridLengthAnimation 
                                                    Storyboard.TargetProperty="Width"
                                                    From="50"
                                                    To="250" 
                                                    Duration="0:0:0.3">
                                                <helper:GridLengthAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </helper:GridLengthAnimation.EasingFunction>
                                            </helper:GridLengthAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.ExitActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ColumnDefinition.Style>
            </ColumnDefinition>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menu Left -->
        <Border Grid.Column="0"
                BorderBrush="#FFCCCCCC"
                BorderThickness="0,0,1,0"
                Padding="5,0,5,0"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                ScrollViewer.VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <!--- Title -->
                <Border Grid.Row="0" Height="37" Padding="0,0,0,0" Margin="0,10,0,10">
                    <Grid VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0"  Source="/Assets/logo.png"
                               Width="28" Height="28"
                               Stretch="Fill"
                               Margin="5,0,5,0"
                               Cursor="Hand">
                            <Image.InputBindings>
                                <MouseBinding MouseAction="LeftClick" Command="{Binding ToggleMenuCommand}"/>
                            </Image.InputBindings>
                        </Image>
                        <TextBlock Grid.Column="1" Width="auto" Height="auto" Text="{Binding ServerType}" Foreground="#FF404040" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <Button Grid.Column="2"
                                Command="{Binding ToggleMenuCommand}"
                                Style="{StaticResource StyleButtonCollapse}"
                                Margin="0,0,5,0">
                            <iconPacks:PackIconMaterial Kind="Menu" VerticalAlignment="Center"/>
                        </Button>
                    </Grid>
                </Border>
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              VirtualizingStackPanel.ScrollUnit="Pixel"
                              CanContentScroll="False"
                              HorizontalScrollBarVisibility="Disabled">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <!-- Menu content-->
                        <StackPanel Grid.Row="0">
                            <!--Label-->
                            <Border>
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Background="Transparent" Grid.Column="0" Cursor="Hand">
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" 
                                                          Command="{Binding ToggleModuleExpandCommand}" />
                                        </Border.InputBindings>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="10,0,0,0">
                                            <iconPacks:PackIconMaterial Grid.Column="1" Width="10" Height="10" Margin="0,3,0,0" VerticalAlignment="Center" Foreground="#FF616060" >
                                                <iconPacks:PackIconMaterial.Style>
                                                    <Style TargetType="iconPacks:PackIconMaterial">
                                                        <Setter Property="Kind" Value="ChevronDown"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsModuleExpanded}" Value="False">
                                                                <Setter Property="Kind" Value="ChevronRight"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </iconPacks:PackIconMaterial.Style>
                                            </iconPacks:PackIconMaterial>
                                            <TextBlock Foreground="#FF404040" Text="Module" Margin="10,0,0,0" FontSize="16" FontWeight="DemiBold" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                        </StackPanel>
                                    </Border>
                                    <Button Grid.Column="1"
                                            Command="{Binding ToggleSearchModuleExpandCommand}"
                                            Margin="0,0,5,0"
                                            Width="25" Height="25">
                                        <iconPacks:PackIconMaterial Kind="Magnify"  Width="15" Height="15" VerticalAlignment="Center" Foreground="#FF656565"/>
                                        <Button.ToolTip>
                                            <ToolTip Padding="4,1" HasDropShadow="True"
                                                     SnapsToDevicePixels="True" Style="{StaticResource TooltipAccountName}">
                                                <TextBlock Text="Tìm kiếm module"/>
                                            </ToolTip>
                                        </Button.ToolTip>
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource CreateDataMenuStyle}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSearchModuleExpanded}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Grid.Column="2"
                                            Command="{Binding CreateModuleCommand}"
                                            Width="25" Height="25"
                                            Style="{StaticResource CreateDataMenuStyle}">
                                        <iconPacks:PackIconMaterial Kind="Plus"  Width="15" Height="15" VerticalAlignment="Center" Foreground="#FF656565"/>
                                        <Button.ToolTip>
                                            <ToolTip Padding="4,1" HasDropShadow="True"
                                                        SnapsToDevicePixels="True" Style="{StaticResource TooltipAccountName}">
                                                <TextBlock Text="Tạo mới module"/>
                                            </ToolTip>
                                        </Button.ToolTip>
                                    </Button>
                                </Grid>
                            </Border>
                            <!-- Module List -->
                            <StackPanel>
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsModuleExpanded}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                
                                <!-- search module -->
                                <StackPanel Margin="15,5" >
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsSearchModuleExpanded}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <Border Background="White" BorderThickness="1" CornerRadius="15" Padding="5,2" Height="35">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="BorderBrush" Value="#d8d8d8"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                                        <Setter Property="BorderBrush" Value="#2196F3"/>
                                                        <Setter Property="BorderThickness" Value="1.5"/>
                                                        <Setter Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect BlurRadius="6" ShadowDepth="0" Color="#2196F3" Opacity="0.5"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <iconPacks:PackIconMaterial Grid.Column="0" x:Name="SearchAccIcon" Kind="Magnify" Foreground="Gray" VerticalAlignment="Center" Width="14" Margin="4,0,0,0" />
                                            <TextBox Grid.Column="1" 
                                                     Text="{Binding SearchModuleText, UpdateSourceTrigger=PropertyChanged}"
                                                     Background="Transparent" BorderThickness="0" 
                                                     FontSize="14" Margin="5,0"
                                                     VerticalContentAlignment="Center"/>

                                            <TextBlock Grid.Column="1"
                                                       IsHitTestVisible="False"
                                                       Text="Tên module..." 
                                                       VerticalAlignment="Center" Margin="5,0"
                                                       Foreground="#FF5D5D5D" FontSize="14">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding SearchModuleText}" Value="">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding SearchModuleText}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <Button Grid.Column="2"
                                                    Command="{Binding ToggleSearchModuleExpandCommand}"
                                                    Style="{StaticResource CreateDataMenuStyle}"
                                                    Width="25" Height="25">
                                                <iconPacks:PackIconMaterial Kind="Upload"  Width="15" Height="15" VerticalAlignment="Center" Foreground="#FF656565"/>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                                
                                <ListBox ItemsSource="{Binding ModuleMenuView}"
                                        SelectedItem="{Binding SelectedModule}"
                                        ItemContainerStyle="{StaticResource MenuItemModuleStyle}"
                                        PreviewMouseWheel="ListBox_PreviewMouseWheel"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="0,0,0,0"
                                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                        ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                        VerticalAlignment="Stretch">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <ContentControl Content="{Binding}"
                                                            ContentTemplate="{StaticResource MenuItemModule}" />
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                            <!-- Account -->
                            <Grid Grid.Row="4" Margin="0,10,0,0">
                                <Border x:Name="MenuContentHolder">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Label Account -->
                                        <Border Grid.Row="0">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="auto"/>
                                                    <ColumnDefinition Width="auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.Column="0" Background="Transparent" Cursor="Hand">
                                                    <Border.InputBindings>
                                                        <MouseBinding   MouseAction="LeftClick"
                                                                        Command="{Binding ToggleAccountExpandCommand}" />
                                                    </Border.InputBindings>
                                                    <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="10,0,0,0">
                                                        <iconPacks:PackIconMaterial Grid.Column="1" Margin="0,3,0,0" Width="10" Height="10" VerticalAlignment="Center" Foreground="#FF5B5B5B" >
                                                            <iconPacks:PackIconMaterial.Style>
                                                                <Style TargetType="iconPacks:PackIconMaterial">
                                                                    <Setter Property="Kind" Value="ChevronDown"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsAccountExpanded}" Value="False">
                                                                            <Setter Property="Kind" Value="ChevronRight"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </iconPacks:PackIconMaterial.Style>
                                                        </iconPacks:PackIconMaterial>
                                                        <TextBlock Text= "Tài khoản" Foreground="#FF404040" FontSize="16" Margin="10,0,0,0" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Border>
                                                <Button Grid.Column="1"
                                                        Command="{Binding ToggleSearchAccountExpandCommand}"
                                                        Margin="0,0,5,0"
                                                        Width="25" Height="25">
                                                    <iconPacks:PackIconMaterial Kind="Magnify"  Width="15" Height="15" VerticalAlignment="Center" Foreground="#FF656565"/>
                                                    <Button.ToolTip>
                                                        <ToolTip Padding="4,1" HasDropShadow="True"
                                                                    SnapsToDevicePixels="True" Style="{StaticResource TooltipAccountName}">
                                                            <TextBlock Text="Tìm kiếm module"/>
                                                        </ToolTip>
                                                    </Button.ToolTip>
                                                    <Button.Style>
                                                        <Style TargetType="Button" BasedOn="{StaticResource CreateDataMenuStyle}">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsSearchAccountExpanded}" Value="True">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                                <Button Grid.Column="2"
                                                            Command="{Binding CreateAccountCommand}"
                                                            Width="25" Height="25"
                                                            Style="{StaticResource CreateDataMenuStyle}">
                                                    <iconPacks:PackIconMaterial Kind="Plus"  Width="15" Height="15" VerticalAlignment="Center" Foreground="#FF656565"/>
                                                    <Button.ToolTip>
                                                        <ToolTip Padding="4,1"
                                                                 HasDropShadow="True"
                                                                 SnapsToDevicePixels="True"
                                                                 Style="{StaticResource TooltipAccountName}">
                                                            <TextBlock Text="Thêm mới tài khoản"/>
                                                        </ToolTip>
                                                    </Button.ToolTip>
                                                </Button>
                                            </Grid>
                                        </Border>
                                        <StackPanel Grid.Row="1">
                                            <StackPanel.Style>
                                                <Style TargetType="StackPanel">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsAccountExpanded}" Value="False">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Style>
                                            <!-- Tìm kiếm Account -->
                                            <StackPanel Margin="15,5" >
                                                <StackPanel.Style>
                                                    <Style TargetType="StackPanel">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsSearchAccountExpanded}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </StackPanel.Style>
                                                <Border Background="White" BorderThickness="1" CornerRadius="15" Padding="5,2" Height="35">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="BorderBrush" Value="#d8d8d8"/>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                                                    <Setter Property="BorderBrush" Value="#2196F3"/>
                                                                    <Setter Property="BorderThickness" Value="1.5"/>
                                                                    <Setter Property="Effect">
                                                                        <Setter.Value>
                                                                            <DropShadowEffect BlurRadius="6" ShadowDepth="0" Color="#2196F3" Opacity="0.5"/>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <iconPacks:PackIconMaterial Kind="Magnify" Foreground="Gray" VerticalAlignment="Center" Width="14" Margin="4,0,0,0" />
                                                        <TextBox Grid.Column="1" 
                                                             Text="{Binding SearchAccountText, UpdateSourceTrigger=PropertyChanged}"
                                                             Background="Transparent" BorderThickness="0"
                                                             FontSize="14" Margin="5,0,5,0"
                                                             VerticalContentAlignment="Center" Grid.ColumnSpan="2"/>

                                                        <TextBlock IsHitTestVisible="False" Text="Tên nhân viên, tài khoản" 
                                                               VerticalAlignment="Center" Grid.Column="1" Margin="5,0,5,0"
                                                               Foreground="#FF5D5D5D" FontSize="14" Grid.ColumnSpan="2">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding SearchAccountText}" Value="">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding SearchAccountText}" Value="{x:Null}">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                        <Button Grid.Column="2"
                                                                Command="{Binding ToggleSearchAccountExpandCommand}"
                                                                Style="{StaticResource CreateDataMenuStyle}"
                                                                Width="25" Height="25">
                                                            <iconPacks:PackIconMaterial Kind="Upload"  Width="15" Height="15" VerticalAlignment="Center" Foreground="#FF656565"/>
                                                        </Button>
                                                    </Grid>
                                                </Border>
                                            </StackPanel>
                                            <!-- Danh sách Account-->
                                            <ListBox ItemsSource="{Binding AccountMenuView}"
                                                    ItemContainerStyle="{StaticResource MenuItemAccountStyle}"
                                                    PreviewMouseWheel="ListBox_PreviewMouseWheel"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Margin="0,0,0,20"
                                                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                    ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                                    VerticalAlignment="Stretch">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <ContentControl Content="{Binding}"
                                                                    ContentTemplate="{StaticResource MenuItemAccount}" />
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
                <Separator Margin="5,0,5,0" Grid.Row="2" Background="#d0d0d0"/>
                <!-- Settings -->
                <StackPanel Grid.Row="3">
                    <Border Margin="0,0,0,0" Height="50">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*">
                                    <ColumnDefinition.Style>
                                        <Style TargetType="ColumnDefinition">
                                            <Setter Property="Width" Value="*"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                                    <Setter Property="Width" Value="0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ColumnDefinition.Style>
                                </ColumnDefinition>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition>
                                    <ColumnDefinition.Style>
                                        <Style TargetType="ColumnDefinition">
                                            <Setter Property="Width" Value="Auto"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                                    <Setter Property="Width" Value="*"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ColumnDefinition.Style>
                                </ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Foreground="#FF404040" 
                                       Text="Cài đặt"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"
                                       FontSize="16" Grid.ColumnSpan="2">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <ToggleButton Grid.Column="1"
                                          x:Name="BtnToggleSetting"
                                          Width="25" Height="25"
                                          Margin="6,6,10,6"
                                          Foreground="DimGray"
                                          BorderThickness="1"
                                          Cursor="Hand">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="MainBorder"
                                                Background="Transparent"
                                                CornerRadius="14">
                                            <iconPacks:PackIconMaterial Kind="CogOutline" 
                                                    Width="16" Height="16"
                                                    Foreground="{TemplateBinding Foreground}"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="MainBorder" Property="Background" Value="#E0E0E0"/>
                                                <Setter Property="Foreground" Value="#FF509BFF"/>
                                            </Trigger>

                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="MainBorder" Property="Background" Value="#E0E0E0"/>
                                                <Setter Property="Foreground" Value="#FF509BFF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <Popup IsOpen="{Binding IsChecked, ElementName=BtnToggleSetting, Mode=TwoWay}"
                                   PlacementTarget="{Binding ElementName=BtnToggleSetting}"
                                   StaysOpen="False" AllowsTransparency="True" PopupAnimation="Slide" Placement="Top" Grid.ColumnSpan="2">
                                <Border Background="#FFF9F9F9" CornerRadius="10" BorderThickness="2" BorderBrush="#FFDADADA" Padding="10,10,10,5">
                                    <StackPanel Width="auto">
                                        <TextBlock Text="Server"
                                                   FontSize="14" FontWeight="SemiBold" Margin="5,0,0,5" Foreground="#FF444444"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                            <RadioButton Content="CAPP" 
                                                         Style="{StaticResource ServerToggleLeftStyle}"
                                                         GroupName="ServerType"
                                                         Cursor="Hand"
                                                         FontWeight="SemiBold"
                                                         IsChecked="{Binding ServerType, Converter={StaticResource ComparisonConverter}, ConverterParameter=CAPP, Mode=TwoWay}"/>
                                            <RadioButton Content="PRERP"
                                                         Cursor="Hand"
                                                         Style="{StaticResource ServerToggleRightStyle}"
                                                         FontWeight="SemiBold"
                                                         GroupName="ServerType"
                                                         IsChecked="{Binding ServerType, Converter={StaticResource ComparisonConverter}, ConverterParameter=PRERP, Mode=TwoWay}"/>
                                        </StackPanel>

                                        <TextBlock Text="Data"
                                                   Margin="5,10,0,5"
                                                   FontSize="14" FontWeight="SemiBold" Foreground="#FF444444"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Content="Import"
                                                    Tag="TrayArrowDown"
                                                    Style="{StaticResource ExportImportButtonStyle}"
                                                    Command="{Binding ImportDataCommand}"
                                                    Margin="0,0,10,0"/>
                                            <Button Content="Export"
                                                    Tag="TrayArrowUp"
                                                    Style="{StaticResource ExportImportButtonStyle}"
                                                    Command="{Binding ExportDataCommand}"/>
                                        </StackPanel>

                                        <StackPanel Margin="5,20,0,0" Orientation="Horizontal">

                                            <StackPanel Margin="0,0,0,10">
                                                <TextBlock Text="Dark mode"
                                                       VerticalAlignment="Center"
                                                       FontSize="14" FontWeight="SemiBold"
                                                       Foreground="#FF444444"/>
                                            </StackPanel>
                                            <StackPanel>
                                                <CheckBox Style="{StaticResource ModernSwitchStyle}"
                                                          Margin="10,0,0,0"
                                                          IsChecked="{Binding IsDarkMode, Mode=TwoWay}"/>
                                            </StackPanel>
                                        </StackPanel>

                                    </StackPanel>
                                </Border>
                            </Popup>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content Right -->
        <ItemsControl ItemsSource="{Binding Modules}" Grid.Column="1" Grid.ColumnSpan="2">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Visibility="{Binding IsSelected, Converter={StaticResource BoolToVis}}">
                        <ContentControl Content="{Binding}">
                            <ContentControl.Style>
                                <Style TargetType="ContentControl">
                                    <Setter Property="ContentTemplate" Value="{x:Null}" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsLoaded}" Value="True">
                                            <Setter Property="ContentTemplate">
                                                <Setter.Value>
                                                    <DataTemplate>
                                                        <ContentPresenter Content="{Binding}" />
                                                    </DataTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ContentControl.Style>
                        </ContentControl>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Toast -->
        <Popup AllowsTransparency="True"
               IsOpen="True"
               Placement="Right"
               HorizontalOffset="-380"
               VerticalOffset="0"
               PlacementTarget="{Binding ElementName=AppMain}">
            <Grid VerticalAlignment="Top" Width="Auto" Margin="0,10,10,0" Panel.ZIndex="3">
                <ItemsControl ItemsSource="{x:Static local:ToastService.Toasts}"
                              ItemTemplate="{StaticResource ToastTemplate}"
                              VerticalAlignment="Bottom" HorizontalAlignment="Right"
                              Margin="0,0,0,0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform/>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                                                From="400" To="0" Duration="0:0:0.4">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1" Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Style.Triggers>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                </ItemsControl>
            </Grid>
        </Popup>

        <!--Account info -->
        <Popup IsOpen="{Binding IsAccountPopupOpen}"
               Placement="MousePoint"
               HorizontalOffset="15"
               VerticalOffset="-15"
               AllowsTransparency="True"
               StaysOpen="False"
               PopupAnimation="Fade">
            <Grid>
                <Border Background="White" CornerRadius="20" Margin="15" BorderThickness="0.5" BorderBrush="#FF8E8E8E">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" Direction="0" ShadowDepth="0" Opacity="0.2"/>
                    </Border.Effect>
                    <views:AccountDetailView DataContext="{Binding SelectedPopupAccount}" />
                </Border>
            </Grid>
        </Popup>
        
    </Grid>
</Window>