<Window x:Class="PRERP_TESTER.Views.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PRERP_TESTER.ViewModels"
        mc:Ignorable="d"
        Title="PRERP-TESTER"
        Width="1400" Height="900"
        WindowStartupLocation="CenterScreen"
        Background="#FFF7F7F7">

    <Window.DataContext>
        <vm:ShellViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT: Modules -->
        <Border Grid.Column="0"
                Background="White"
                BorderBrush="#FFE1E1E1"
                BorderThickness="0,0,1,0">
            <DockPanel>

                <TextBlock DockPanel.Dock="Top"
                           Margin="16,16,16,10"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Text="Modules"/>

                <ListBox Margin="10"
                         ItemsSource="{Binding Modules}"
                         SelectedItem="{Binding SelectedModule, Mode=TwoWay}"
                         ItemTemplate="{StaticResource MenuItem}"
                         BorderThickness="0"
                         Background="Transparent">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="Margin" Value="0,0,0,3"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="#FFE6E6E6"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border Background="{TemplateBinding Background}"
							                    BorderBrush="{TemplateBinding BorderBrush}"
							                    BorderThickness="{TemplateBinding BorderThickness}"
							                    CornerRadius="4">
                                            <ContentPresenter/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#CCDDE9"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#CCDDE9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                        
                    </ListBox.ItemContainerStyle>
                </ListBox>

            </DockPanel>
        </Border>

        <!-- RIGHT: Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header module -->
            <Border Grid.Row="0"
                    Background="White"
                    BorderBrush="#FFE1E1E1"
                    BorderThickness="0,0,0,1"
                    Padding="16,10,0,10">
                <StackPanel>
                    <TextBlock FontSize="18" FontWeight="SemiBold"
                               Text="{Binding SelectedModule.Name, FallbackValue='Chưa có Module nào'}"/>
                    <TextBlock Margin="0,6,0,0" Opacity="0.7"
                               Text="{Binding SelectedModule.Description}"/>
                </StackPanel>
            </Border>

            <!-- Frame -->
            <Frame x:Name="MainFrame"
                   Grid.Row="1"
                   Margin="16"
                   Background="White"
                   NavigationUIVisibility="Hidden"/>
        </Grid>

    </Grid>
</Window>