<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks">

    <!-- Module item -->
    <DataTemplate x:Key="MenuItemModule">
        <Border>
            <Grid Height="40" ToolTipService.InitialShowDelay="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="32"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="28"/>
                </Grid.ColumnDefinitions>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="ToolTip" Value="{x:Null}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding DataContext.IsMenuCollapsed, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                <Setter Property="ToolTip">
                                    <Setter.Value>
                                        <ToolTip Style="{StaticResource TooltipMenuLeft}" Content="{Binding Name}"/>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <!-- Module Icon -->
                <iconPacks:PackIconMaterial Kind="Folder" 
                            Width="14" Height="14"
                            Grid.Column="0"
                            Margin="4,0,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <iconPacks:PackIconMaterial.Style>
                        <Style TargetType="{x:Type iconPacks:PackIconMaterial}">
                            <Setter Property="Foreground" Value="#FF9A9A9A"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                    <Setter Property="Foreground" Value="#FF226DE8"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </iconPacks:PackIconMaterial.Style>
                </iconPacks:PackIconMaterial>

                <!-- Module Name -->
                <TextBlock  Grid.Column="1"
						    VerticalAlignment="Center"
						    Text="{Binding Name}"
                            Margin="5,0,0,0"
						    TextTrimming="CharacterEllipsis">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#FF1F2937"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}" Value="True">
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding DataContext.IsMenuCollapsed, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>

                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- phải -->
                <TextBlock Grid.Column="2"
						   VerticalAlignment="Center"
						   HorizontalAlignment="Center"
						   FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="#FF9CA3AF">
                    <iconPacks:PackIconMaterial Grid.Column="2" 
                                                Kind="ChevronRight" 
                                                Width="10" Height="10" />
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DataContext.IsMenuCollapsed, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Border>
    </DataTemplate>

    <Style x:Key="MenuItemModuleStyle" TargetType="ListBoxItem">
        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border x:Name="MainBorder" 
                            CornerRadius="4" 
                            Background="Transparent"
                            BorderThickness="0"
                            Margin="0,1"
                            SnapsToDevicePixels="True">
                        <ContentPresenter />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="MainBorder" Property="Background" Value="#15000000"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="MainBorder" Property="Background" Value="#15000000"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Account Item-->
    <DataTemplate x:Key="MenuItemAccount">
        <Border>
            <Grid Height="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <iconPacks:PackIconMaterial Width="14" Height="14" 
                            VerticalAlignment="Center">
                    <iconPacks:PackIconMaterial.Style>
                        <Style TargetType="{x:Type iconPacks:PackIconMaterial}">
                            <Setter Property="Kind" Value="AccountTie"/>
                            <Setter Property="Foreground" Value="#FF6B6B6B"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Stype}" Value="STUDENT">
                                    <Setter Property="Kind" Value="School"/>
                                </DataTrigger>

                                <DataTrigger Binding="{Binding Stype}" Value="STAFF">
                                    <Setter Property="Kind" Value="AccountTie"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </iconPacks:PackIconMaterial.Style>
                </iconPacks:PackIconMaterial>

                <TextBlock  Grid.Column="1"
					        VerticalAlignment="Center"
					        Text="{Binding DisplayName}"
                            Foreground="#FF1F2937"
                            FontSize="13"
                            Margin="5,0,0,0"
					        TextTrimming="CharacterEllipsis"/>
                <Button Grid.Column="2"
                        Command="{Binding DataContext.EditAccountCommand, 
                                          RelativeSource={RelativeSource AncestorType=ListBox}}"
                        CommandParameter="{Binding}"
                        Width="25" Height="25"
                        Margin="5,0,20,0"
                        Style="{StaticResource EditAccountButtonStyle}">
                    <iconPacks:PackIconMaterial Kind="Rename" />
                </Button>

            </Grid>
        </Border>
    </DataTemplate>

    <Style x:Key="MenuItemAccountStyle" TargetType="ListBoxItem">
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border x:Name="MainBorder" 
                        CornerRadius="4" 
                        Background="Transparent"
                        BorderThickness="0"
                        Margin="0,1"
                        SnapsToDevicePixels="True">
                        <ContentPresenter />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="MainBorder" Property="Background" Value="WhiteSmoke"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
