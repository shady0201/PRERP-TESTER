<UserControl    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
                xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:conv="clr-namespace:PRERP_TESTER.Converters"
                xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                xmlns:ei="http://schemas.microsoft.com/xaml/behaviors" xmlns:helper="clr-namespace:PRERP_TESTER.Helper"
                mc:Ignorable="av"
                x:Class="PRERP_TESTER.Views.UserControls.ModuleView"
                xmlns:vm="clr-namespace:PRERP_TESTER.ViewModels"
                av:DesignHeight="346.928" av:DesignWidth="754.237">

    <UserControl.Resources>
        <conv:SubtractValueConverter x:Key="SubtractValueConverter" />
    </UserControl.Resources>

    <Border Padding="10,6,6,6" Background="{DynamicResource SecondaryBackground}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="143*"/>
                <ColumnDefinition Width="591*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Margin="0,0,0,4" Grid.ColumnSpan="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding Name}" Grid.Column="1" TextTrimming="CharacterEllipsis" FontSize="24" FontWeight="SemiBold" Foreground="#FF525252"/>
                    </Grid>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">

                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Row="1" Background="WhiteSmoke" CornerRadius="6" Grid.ColumnSpan="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Name="AccountListColumn">
                            <ColumnDefinition.Style>
                                <Style TargetType="ColumnDefinition">
                                    <Setter Property="Width" Value="200"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Source={x:Static vm:MainViewModel.Instance}, Path=IsAccountListCollapsed}" Value="True">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <helper:GridLengthAnimation 
                                                                Storyboard.TargetProperty="Width"
                                                                From="200" To="50" Duration="0:0:0.3">
                                                            <helper:GridLengthAnimation.EasingFunction>
                                                                <CubicEase EasingMode="EaseOut"/>
                                                            </helper:GridLengthAnimation.EasingFunction>
                                                        </helper:GridLengthAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <helper:GridLengthAnimation 
                                                        Storyboard.TargetProperty="Width"
                                                        From="0" To="220" Duration="0:0:0.3">
                                                            <helper:GridLengthAnimation.EasingFunction>
                                                                <CubicEase EasingMode="EaseOut"/>
                                                            </helper:GridLengthAnimation.EasingFunction>
                                                        </helper:GridLengthAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.ExitActions>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ColumnDefinition.Style>
                        </ColumnDefinition>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!-- Account List-->
                    <Border Grid.Column="0"
                            Background="White"
                            Padding="0,5,0,0"
                            CornerRadius="6"
                            BorderThickness="1"
                            BorderBrush="#FFB9B9B9">
                        <Border.Effect>
                            <DropShadowEffect Color="#FFCECECE"
                                              Direction="0"
                                              ShadowDepth="0"
                                              Opacity="0.3"
                                              BlurRadius="4"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <!-- Header control-->
                            <Button Grid.Row="0"
                                    Command="{Binding Source={x:Static vm:MainViewModel.Instance}, Path=ToggleAccountListCommand}"
                                    Margin="10,0,10,0">
                                <iconPacks:PackIconMaterial Kind="ChevronRight" Width="12" Height="12" Foreground="#FF757575"/>
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource StyleButtonCollapse}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Source={x:Static vm:MainViewModel.Instance}, Path=IsAccountListCollapsed}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Separator Grid.Row="1" Background="#FFA4A4A4" Margin="6,10">
                                <Separator.Style>
                                    <Style TargetType="Separator">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Source={x:Static vm:MainViewModel.Instance}, Path=IsAccountListCollapsed}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Separator.Style>
                            </Separator>
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="HorizontalAlignment" Value="Left"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Source={x:Static vm:MainViewModel.Instance}, Path=IsAccountListCollapsed}" Value="True">
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <Button Command="{Binding AddAccountToModuleCommand}"
                                            Width="auto">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource StyleButtonCollapse}">
                                                <Setter Property="Margin" Value="10,0,0,0"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Source={x:Static vm:MainViewModel.Instance}, Path=IsAccountListCollapsed}" Value="True">
                                                        <Setter Property="Margin" Value="0"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <Border Padding="6,3">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <iconPacks:PackIconMaterial Kind="AccountMultiplePlus"
                                                                                Foreground="#FF757575"
                                                                                Width="24" Height="24"
                                                                                VerticalAlignment="Center"/>
                                                <TextBlock Text="Thêm tài khoản" FontSize="14" Margin="6,0,0,0" Foreground="#FF545454" VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Source={x:Static vm:MainViewModel.Instance}, Path=IsAccountListCollapsed}" Value="True">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>
                                    </Button>
                                </StackPanel>
                                <Button Grid.Column="2"
                                            Command="{Binding Source={x:Static vm:MainViewModel.Instance}, Path=ToggleAccountListCommand}"
                                            Margin="5,0,10,0">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource StyleButtonCollapse}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Source={x:Static vm:MainViewModel.Instance}, Path=IsAccountListCollapsed}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <iconPacks:PackIconMaterial Kind="ChevronLeft" Width="12" Height="12" Foreground="#FF757575"/>
                                </Button>
                            </Grid>
                            <!-- List account -->
                            <Border Grid.Row="3"
                                    Margin="0,5,0,0"
                                    Padding="0,0,0,5"
                                    Background="White"
                                    CornerRadius="0,0,6,6"
                                    Height="auto">
                                <AdornerDecorator>
                                    <ListBox ItemsSource="{Binding ModuleAccounts}"
                                                    SelectedItem="{Binding SelectedAccountModule}"
                                                    ItemContainerStyle="{StaticResource ItemAccountSelectContainerStyle}"
                                                    Background="Transparent"
                                                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                    ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                                    AllowDrop="True"
                                                    PreviewMouseMove="ListBox_PreviewMouseMove"
                                                    Drop="ListBox_Drop"
                                                    DragOver="ListBox_DragOver"
                                                    BorderThickness="0">
                                        <ListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Vertical" Height="Auto">
                                                    <i:Interaction.Behaviors>
                                                        <ei:FluidMoveBehavior AppliesTo="Children" Duration="0:0:0.3">
                                                            <ei:FluidMoveBehavior.EaseY>
                                                                <CubicEase EasingMode="EaseOut"/>
                                                            </ei:FluidMoveBehavior.EaseY>
                                                            <ei:FluidMoveBehavior.EaseX>
                                                                <CubicEase EasingMode="EaseOut"/>
                                                            </ei:FluidMoveBehavior.EaseX>
                                                        </ei:FluidMoveBehavior>
                                                    </i:Interaction.Behaviors>
                                                </StackPanel>
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <ContentControl Content="{Binding}" ContentTemplate="{StaticResource AccountItem}" />
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </AdornerDecorator>
                            </Border>
                        </Grid>
                    </Border>
                    <!-- web browers-->
                    <Border Grid.Column="1" Grid.ColumnSpan="2"
                            Margin="6,0,0,0"
                            CornerRadius="6,6,0,0"
                            BorderThickness="1"
                            BorderBrush="#FFB9B9B9">
                        <ItemsControl ItemsSource="{Binding ModuleAccounts}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Grid />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Visibility="{Binding IsSelected, Converter={StaticResource BoolToVis}}">
                                        <ContentControl Content="{Binding}">
                                            <ContentControl.Style>
                                                <Style TargetType="ContentControl">
                                                    <Setter Property="ContentTemplate" Value="{x:Null}" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsLoaded}" Value="True">
                                                            <Setter Property="ContentTemplate">
                                                                <Setter.Value>
                                                                    <DataTemplate>
                                                                        <ContentPresenter Content="{Binding}" />
                                                                    </DataTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ContentControl.Style>
                                        </ContentControl>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>