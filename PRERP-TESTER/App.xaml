<Application x:Class="PRERP_TESTER.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PRERP_TESTER"
             xmlns:vm="clr-namespace:PRERP_TESTER.ViewModels"
             xmlns:views="clr-namespace:PRERP_TESTER.Views.UserControls"
             xmlns:helper="clr-namespace:PRERP_TESTER.Helper"
             xmlns:views1="clr-namespace:PRERP_TESTER.Views.UserControls">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Main.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Dialog.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Tooltip.xaml"/>
                <ResourceDictionary Source="Resources/Styles/WebTab.xaml"/>
                <ResourceDictionary Source="Resources/Styles/MenuLeft.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Module.xaml"/>
                <ResourceDictionary Source="Resources/Templates/Toast.xaml"/>
                <ResourceDictionary Source="Resources/Templates/MenuLeftItem.xaml"/>
                <ResourceDictionary Source="Resources/Templates/AccountsModuleItem.xaml"/>
                <ResourceDictionary Source="Resources/Templates/AccountDetail.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Convert -->
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
            <helper:ComparisonToBoolConverter x:Key="ComparisonConverter"/>
            
            <!-- Google 
            <FontFamily x:Key="GoogleSans">
                pack://application:,,,/PRERP_TESTER;component/Resources/Fonts/#Google Sans
            </FontFamily>
    
            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="FontFamily" Value="{StaticResource GoogleSans}"/>
                <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
                <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
            </Style>

            <Style TargetType="{x:Type Control}">
                <Setter Property="FontFamily" Value="{StaticResource GoogleSans}"/>
                <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
                <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
            </Style>
            font-->

            <!--Data template-->
            <DataTemplate DataType="{x:Type vm:ModuleViewModel}">
                <views:ModuleView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:AccountViewModel}">
                <views:AccountView />
            </DataTemplate>
            
            
            <Style x:Key="InvisibleRepeatButtonStyle" TargetType="{x:Type RepeatButton}">
                <Setter Property="OverridesDefaultStyle" Value="true"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Focusable" Value="false"/>
                <Setter Property="IsTabStop" Value="false"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type RepeatButton}">
                            <Border Background="Transparent" />
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="ModernScrollBarThumb" TargetType="{x:Type Thumb}">
                <Setter Property="OverridesDefaultStyle" Value="true"/>
                <Setter Property="IsTabStop" Value="false"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Thumb}">
                            <Border x:Name="rectangle"
                                    Background="#a9a9a9" 
                                    CornerRadius="2"
                                    SnapsToDevicePixels="True"/>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="true">
                                    <Setter TargetName="rectangle" Property="Background" Value="#808080"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <!-- Scroll bar-->
            <Style TargetType="{x:Type ScrollBar}">
                <Setter Property="MinHeight" Value="0"/>
                <Setter Property="MinWidth" Value="0"/>
                <Setter Property="Width" Value="5"/>
                <Setter Property="Background" Value="Transparent"/>

                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ScrollBar}">
                            <Grid x:Name="Bg" Background="Transparent" SnapsToDevicePixels="true">
                                <Track x:Name="PART_Track" IsDirectionReversed="true" IsEnabled="{TemplateBinding IsEnabled}">
                                    <Track.DecreaseRepeatButton>
                                        <RepeatButton Command="{x:Static ScrollBar.PageUpCommand}" Style="{StaticResource InvisibleRepeatButtonStyle}"/>
                                    </Track.DecreaseRepeatButton>
                                    <Track.IncreaseRepeatButton>
                                        <RepeatButton Command="{x:Static ScrollBar.PageDownCommand}" Style="{StaticResource InvisibleRepeatButtonStyle}"/>
                                    </Track.IncreaseRepeatButton>
                                    <Track.Thumb>
                                        <Thumb Style="{StaticResource ModernScrollBarThumb}" Margin="4,0,-3,0"/>
                                    </Track.Thumb>
                                </Track>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>

                <Style.Triggers>
                    <Trigger Property="Orientation" Value="Horizontal">
                        <Setter Property="Width" Value="Auto"/>
                        <Setter Property="Height" Value="5"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ScrollBar}">
                                    <Grid x:Name="Bg" Background="Transparent" SnapsToDevicePixels="true">
                                        <Track x:Name="PART_Track" IsEnabled="{TemplateBinding IsEnabled}">
                                            <Track.DecreaseRepeatButton>
                                                <RepeatButton Command="{x:Static ScrollBar.PageLeftCommand}" Style="{StaticResource InvisibleRepeatButtonStyle}"/>
                                            </Track.DecreaseRepeatButton>
                                            <Track.IncreaseRepeatButton>
                                                <RepeatButton Command="{x:Static ScrollBar.PageRightCommand}" Style="{StaticResource InvisibleRepeatButtonStyle}"/>
                                            </Track.IncreaseRepeatButton>
                                            <Track.Thumb>
                                                <Thumb Style="{StaticResource ModernScrollBarThumb}"/>
                                            </Track.Thumb>
                                        </Track>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>

            

        </ResourceDictionary>
    </Application.Resources>
</Application>
