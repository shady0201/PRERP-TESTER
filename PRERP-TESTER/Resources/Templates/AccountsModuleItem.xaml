<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors">

    <DataTemplate x:Key="AccountItem">
        <Grid Margin="0,5,5,5" Width="195" MaxWidth="195">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <!--Avatar-->
            <Grid Grid.Column="0" Width="30" Height="30" Margin="0,0,7,0" VerticalAlignment="Center">
                <iconPacks:PackIconMaterial x:Name="AccIcon"
                                            Kind="Account" 
                                            Foreground="#FF777777"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Width="18" Height="18">
                    <iconPacks:PackIconMaterial.Style>
                        <Style TargetType="{x:Type iconPacks:PackIconMaterial}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Account.IsLoggedIn}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Account.IsLoggedIn}" Value="False">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </iconPacks:PackIconMaterial.Style>
                </iconPacks:PackIconMaterial>
                <Image Source="{Binding Account.AvatarUrl, TargetNullValue={x:Null}, FallbackValue={x:Null}}"
                       Stretch="UniformToFill"
                       Width="30" Height="30">
                    <Image.Clip>
                        <EllipseGeometry Center="15,15" RadiusX="15" RadiusY="15"/>
                    </Image.Clip>
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Account.IsLoggedIn}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>

                                <DataTrigger Binding="{Binding Account.AvatarUrl}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>

                                <DataTrigger Binding="{Binding Account.AvatarUrl}" Value="">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
                <Ellipse Width="30" Height="30" 
                         Stroke="#FFE0E0E0" StrokeThickness="1"
                         IsHitTestVisible="False"/>
            </Grid>
            <!-- Info -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock  Grid.Row="0"
                                x:Name="AccText"
                                VerticalAlignment="Center"
                                Text="{Binding Account.DisplayName}"
                                FontSize="14"
                                FontWeight="SemiBold"
                                TextTrimming="CharacterEllipsis">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#FF636363"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                    <Setter Property="Foreground" Value="#FF3A3A3A"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                    <ToolTipService.InitialShowDelay>0</ToolTipService.InitialShowDelay>
                    <ToolTipService.BetweenShowDelay>0</ToolTipService.BetweenShowDelay>
                    <TextBlock.ToolTip>
                        <ToolTip Padding="4,1" HasDropShadow="True"
                                 SnapsToDevicePixels="True" Style="{StaticResource TooltipAccountName}">
                            <TextBlock Text="{Binding Account.DisplayName}"/>
                        </ToolTip>
                    </TextBlock.ToolTip>
                </TextBlock>

                <Button Grid.Row="1"
                        Command="{Binding DataContext.ShowAccountDetailCommand,RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                        CommandParameter="{Binding}"
                        FontWeight="SemiBold"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Foreground" Value="#FF777777"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#FF4683C7"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </ControlTemplate>
                    </Button.Template>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <TextBlock Text="Chi tiết"/>
                        <iconPacks:PackIconMaterial Kind="ListBoxOutline" Width="10" Height="10" VerticalAlignment="Center" Margin="4,0,0,0" />
                    </StackPanel>
                </Button>
            </Grid>
            <!--Delete button-->
            <Button x:Name="DeleteBtn"
                    Grid.Column="2"
                    Opacity="0"
                    Width="20" Height="20"
                    VerticalAlignment="Top"
                    Command="{Binding DataContext.RemoveAccountFromModuleCommand,
                                RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                CommandParameter="{Binding}"
                    Style="{StaticResource CloseTabButtonStyle}"
                    Cursor="Hand"
                    Margin="10,0,0,0">
            </Button>
        </Grid>
        <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                <Setter TargetName="DeleteBtn" Property="Opacity" Value="1"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>

</ResourceDictionary>